# 开发环境变量配置
NODE_ENV=development

# 应用基本信息
VITE_APP_NAME=五好伴学
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=智能学习助手
VITE_APP_TITLE=五好伴学 - 智能学习助手

# API配置
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000

# 服务器配置
VITE_DEV_SERVER_HOST=0.0.0.0
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_OPEN=true

# 文件上传配置
VITE_UPLOAD_MAX_SIZE=10485760
VITE_UPLOAD_ALLOWED_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.txt,.zip,.rar

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_PWA=false
VITE_ENABLE_ANALYTICS=false

# 开发工具配置
VITE_DEVTOOLS=true
VITE_SOURCE_MAP=true
VITE_DROP_CONSOLE=false
VITE_DROP_DEBUGGER=false

# 性能配置
VITE_BUILD_GZIP=false
VITE_BUILD_ANALYZE=false

# 安全配置
VITE_APP_PUBLIC_PATH=/
VITE_LEGACY_SUPPORT=false

# 第三方服务配置（开发环境留空）
VITE_BAIDU_MAP_KEY=
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# 缓存配置
VITE_CACHE_MAX_AGE=86400
VITE_STATIC_CACHE=true

# 代理配置（与vite.config.ts中的proxy配置对应）
VITE_PROXY_TARGET=http://localhost:8000
VITE_PROXY_CHANGE_ORIGIN=true

# WebSocket配置
VITE_WS_URL=ws://localhost:8000/ws

# 主题配置
VITE_THEME_COLOR=#3b82f6
VITE_DEFAULT_THEME=light

# 语言配置
VITE_DEFAULT_LOCALE=zh-CN
VITE_FALLBACK_LOCALE=zh-CN

# 调试配置
VITE_CONSOLE_LOG_LEVEL=debug
VITE_SHOW_PERFORMANCE=true
VITE_SHOW_NETWORK_LOG=true
