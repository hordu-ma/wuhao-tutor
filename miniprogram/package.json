{
  "name": "wuhao-tutor-miniprogram",
  "version": "1.0.0",
  "description": "五好伴学微信小程序",
  "main": "app.js",
  "scripts": {
    "dev": "npm run compile && npm run build:npm",
    "build": "npm run compile && npm run build:npm",
    "compile": "tsc --noEmit",
    "build:npm": "npm run build:vant",
    "build:vant": "node_modules/.bin/gulp --gulpfile ./node_modules/@vant/weapp/gulpfile.js",
    "lint": "eslint . --ext .js,.ts --fix",
    "lint:check": "eslint . --ext .js,.ts",
    "format": "prettier --write \"**/*.{js,ts,json,wxml,wxss}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,wxml,wxss}\"",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run format && npm run lint && npm run type-check",
    "clean": "rm -rf miniprogram_npm && rm -rf node_modules/.miniprogram",
    "reinstall": "npm run clean && npm install"
  },
  "keywords": [
    "miniprogram",
    "wechat",
    "education",
    "ai",
    "k12",
    "typescript"
  ],
  "author": "Liguo Ma <maliguo@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/wuhao-tutor.git",
    "directory": "miniprogram"
  },
  "dependencies": {
    "@vant/weapp": "^1.11.6",
    "mobx-miniprogram": "^4.13.2",
    "mobx-miniprogram-bindings": "^2.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "miniprogram-api-typings": "^3.12.2",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "gulp": "^4.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "miniprogram": {
    "main": "app.js"
  }
}
