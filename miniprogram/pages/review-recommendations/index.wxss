/* pages/review-recommendations/index.wxss */
.review-recommendations-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.subject-selector {
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.error-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  gap: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666666;
}

.recommendations-scroll {
  padding: 30rpx;
}

/* 提示卡片 */
.tips-card {
  display: flex;
  align-items: center;
  gap: 15rpx;
  background-color: #e6f7ff;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.tips-text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.6;
  color: #1890ff;
}

/* 推荐列表 */
.recommendations-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommendation-item {
  position: relative;
  display: flex;
  gap: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 优先级标签 */
.priority-badge {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.kp-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

/* 统计信息 */
.item-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.stat-chip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background-color: #fafafa;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666666;
}

/* 推荐原因 */
.item-reasons {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 20rpx;
  background-color: #fffbe6;
  border-radius: 12rpx;
}

.reason-item {
  font-size: 26rpx;
  line-height: 1.6;
  color: #666666;
}

/* 操作按钮 */
.item-action {
  display: flex;
  justify-content: flex-end;
}

/* 空状态样式 */
.empty-container {
  padding: 60rpx 30rpx;
}

.empty-tips {
  margin-top: 60rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.tips-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.tips-item {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  padding-left: 20rpx;
}

.empty-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}
