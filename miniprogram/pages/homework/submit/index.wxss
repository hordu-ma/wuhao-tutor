/* pages/homework/submit/index.wxss - 作业提交页面样式 */

.submit-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  gap: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 16rpx;
}

/* 滚动区域 */
.submit-scroll {
  flex: 1;
  padding-bottom: 120rpx;
}

/* 通用区块样式 */
.homework-info-section,
.submit-type-section,
.text-submit-section,
.image-submit-section,
.preview-section {
  background-color: #fff;
  margin: 16rpx 32rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.homework-info-section {
  margin-top: 32rpx;
}

/* 区块头部 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 作业信息 */
.homework-header {
  margin-bottom: 24rpx;
}

.homework-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.homework-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.subject-tag {
  padding: 4rpx 12rpx;
  background-color: #e6f7ff;
  color: #1890ff;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.deadline-text {
  font-size: 26rpx;
  color: #faad14;
}

.homework-description {
  margin-bottom: 24rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.homework-requirements {
  margin-top: 24rpx;
}

.requirements-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.requirements-list {
  padding-left: 16rpx;
}

.requirement-item {
  margin-bottom: 8rpx;
}

.requirement-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 提交类型选择 */
.submit-type-tabs {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.type-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.type-tab.active {
  background-color: #e6f7ff;
  border-color: #1890ff;
}

.type-tab .tab-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.type-tab.active .tab-text {
  color: #1890ff;
  font-weight: 500;
}

/* 文字输入区域 */
.text-input-container {
  position: relative;
}

.text-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  border: 2rpx solid #e8e8e8;
  font-size: 28rpx;
  line-height: 1.6;
  resize: none;
}

.text-input:focus {
  border-color: #1890ff;
  background-color: #fff;
}

.word-count {
  display: flex;
  align-items: center;
}

.count-text {
  font-size: 24rpx;
  font-weight: 500;
}

.count-text.normal {
  color: #52c41a;
}

.count-text.insufficient {
  color: #faad14;
}

.count-text.exceeded {
  color: #f5222d;
}

.error-message {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 12rpx;
  padding: 8rpx 12rpx;
  background-color: #fff2f0;
  border-radius: 8rpx;
}

.error-text {
  font-size: 24rpx;
  color: #f5222d;
}

/* 图片相关样式 */
.image-container {
  margin-top: 16rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.image-preview {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-status {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-status.compressed {
  background-color: rgba(82, 196, 26, 0.9);
}

.image-status.error {
  background-color: rgba(245, 34, 45, 0.9);
}

.image-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 16rpx 8rpx 8rpx;
}

.image-size {
  font-size: 20rpx;
  color: #fff;
  display: block;
  text-align: center;
}

.image-actions {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.image-actions > view {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  transition: background-color 0.2s ease;
}

.delete-btn:active {
  background-color: rgba(245, 34, 45, 0.8);
}

.info-btn:active {
  background-color: rgba(24, 144, 255, 0.8);
}

.compress-btn:active {
  background-color: rgba(250, 173, 20, 0.8);
}

.add-image-container {
  display: flex;
  gap: 16rpx;
}

.add-image-btn,
.camera-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  background-color: #fafafa;
  transition: all 0.2s ease;
}

.add-image-btn:active,
.camera-btn:active {
  border-color: #1890ff;
  background-color: #f0f8ff;
}

.add-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.image-count {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.image-tips {
  margin-top: 16rpx;
  padding: 16rpx;
  background-color: #f6ffed;
  border-radius: 8rpx;
  border-left: 4rpx solid #52c41a;
}

.tips-text {
  display: block;
  font-size: 24rpx;
  color: #52c41a;
  line-height: 1.5;
  margin-bottom: 4rpx;
}

.tips-text:last-child {
  margin-bottom: 0;
}

/* 图片处理状态 */
.image-processing-section {
  background-color: #fff;
  margin: 16rpx 32rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.processing-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.processing-text {
  font-size: 28rpx;
  color: #666;
}

.progress-info {
  width: 100%;
  text-align: center;
}

.progress-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1890ff;
}

/* 压缩进度弹窗 */
.compression-dialog-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  gap: 24rpx;
}

.compression-text {
  font-size: 28rpx;
  color: #666;
}

.compression-progress {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.progress-percentage {
  text-align: center;
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 500;
}

/* 预览区域 */
.preview-section {
  border: 2rpx dashed #1890ff;
  background-color: #f0f8ff;
}

.preview-content {
  margin-top: 16rpx;
}

.preview-text {
  padding: 24rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.preview-text-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.preview-images {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.preview-image {
  width: 100%;
  border-radius: 8rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 2rpx solid #f0f0f0;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-left {
  display: flex;
  gap: 12rpx;
}

.action-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

/* 响应式适配 */
@media (max-width: 320px) {
  .image-item,
  .add-image-btn,
  .camera-btn {
    width: 160rpx;
    height: 160rpx;
  }

  .action-bar {
    padding: 16rpx 24rpx;
  }

  .action-left {
    flex-direction: column;
    gap: 8rpx;
  }
}
