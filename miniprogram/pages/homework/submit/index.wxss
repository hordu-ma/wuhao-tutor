/* pages/homework/submit/index.wxss - 作业提交页面样式 */

.submit-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  gap: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 16rpx;
}

/* 滚动区域 */
.submit-scroll {
  flex: 1;
  padding-bottom: 120rpx;
}

/* 通用区块样式 */
.homework-info-section,
.submit-type-section,
.text-submit-section,
.image-submit-section,
.preview-section {
  background-color: #fff;
  margin: 16rpx 32rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.homework-info-section {
  margin-top: 32rpx;
}

/* 区块头部 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 作业信息 */
.homework-header {
  margin-bottom: 24rpx;
}

.homework-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.homework-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.subject-tag {
  padding: 4rpx 12rpx;
  background-color: #e6f7ff;
  color: #1890ff;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.deadline-text {
  font-size: 26rpx;
  color: #faad14;
}

.homework-description {
  margin-bottom: 24rpx;
}

.description-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.homework-requirements {
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
}

.requirements-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.requirements-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.requirement-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 提交类型选择 */
.submit-type-tabs {
  display: flex;
  gap: 16rpx;
}

.type-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 16rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.type-tab.active {
  background-color: #e6f7ff;
  border: 2rpx solid #1890ff;
}

.tab-text {
  font-size: 26rpx;
  color: #666;
}

.type-tab.active .tab-text {
  color: #1890ff;
  font-weight: 500;
}

/* 字数统计 */
.word-count {
  display: flex;
  align-items: center;
}

.count-text {
  font-size: 24rpx;
  font-weight: 500;
}

.count-text.normal {
  color: #52c41a;
}

.count-text.insufficient {
  color: #faad14;
}

.count-text.exceeded {
  color: #f5222d;
}

/* 文字输入 */
.text-input-container {
  position: relative;
}

.text-input {
  width: 100%;
  min-height: 400rpx;
  padding: 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background-color: #fafafa;
  box-sizing: border-box;
}

.text-input:focus {
  border-color: #1890ff;
  background-color: #fff;
}

/* 错误提示 */
.error-message {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 12rpx;
}

.error-text {
  font-size: 24rpx;
  color: #f5222d;
}

/* 图片数量 */
.image-count {
  font-size: 24rpx;
  color: #666;
}

/* 图片容器 */
.image-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.image-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-preview {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.image-actions {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  padding: 8rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.image-item:hover .image-actions {
  opacity: 1;
}

.delete-btn {
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

/* 添加图片 */
.add-image-container {
  display: flex;
  gap: 16rpx;
}

.add-image-btn,
.camera-btn {
  flex: 1;
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.add-image-btn:hover,
.camera-btn:hover {
  border-color: #1890ff;
  background-color: #f9f9f9;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

/* 图片提示 */
.image-tips {
  padding: 20rpx;
  background-color: #f6ffed;
  border-radius: 12rpx;
  border: 1rpx solid #b7eb8f;
}

.tips-text {
  display: block;
  font-size: 24rpx;
  color: #389e0d;
  line-height: 1.5;
  margin-bottom: 4rpx;
}

.tips-text:last-child {
  margin-bottom: 0;
}

/* 预览内容 */
.preview-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.preview-text {
  padding: 24rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
}

.preview-text-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.preview-images {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.preview-image {
  width: 100%;
  border-radius: 12rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
}

.action-left {
  display: flex;
  gap: 16rpx;
}

.action-left .van-button {
  min-width: 140rpx;
}

.action-right .van-button {
  min-width: 200rpx;
}

/* 响应式调整 */
@media (max-width: 600rpx) {
  .image-list {
    grid-template-columns: repeat(2, 1fr);
  }

  .action-bar {
    flex-direction: column;
    gap: 16rpx;
    align-items: stretch;
  }

  .action-left,
  .action-right {
    width: 100%;
  }

  .action-left {
    justify-content: space-between;
  }
}
