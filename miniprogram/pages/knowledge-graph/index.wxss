/* pages/knowledge-graph/index.wxss */
.knowledge-graph-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 科目选择器 */
.subject-selector {
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 错误提示 */
.error-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  gap: 30rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666666;
}

/* 滚动区域 */
.kg-scroll {
  padding: 30rpx;
}

/* 卡片通用样式 */
.stats-card,
.weak-chains-card,
.knowledge-points-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 30rpx;
}

/* 统计卡片 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #1890ff;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

/* 薄弱知识链 */
.weak-chains-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.weak-chain-item {
  padding: 24rpx;
  background-color: #fff2f0;
  border-radius: 12rpx;
  border-left: 4rpx solid #f5222d;
}

.chain-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.chain-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.chain-info {
  display: flex;
  gap: 30rpx;
  margin-bottom: 12rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666666;
}

.chain-reason {
  padding-top: 12rpx;
  border-top: 1rpx dashed #ffa39e;
}

.reason-label {
  font-size: 24rpx;
  color: #f5222d;
  font-weight: 500;
  margin-right: 8rpx;
}

.reason-text {
  font-size: 24rpx;
  color: #666666;
}

/* 知识点列表 */
.kp-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.kp-item {
  padding: 24rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  border-left: 4rpx solid #1890ff;
}

.kp-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.kp-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.kp-details {
  display: flex;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.detail-text {
  font-size: 24rpx;
  color: #666666;
}

/* 掌握度进度条 */
.kp-progress {
  height: 8rpx;
  background-color: #e8e8e8;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 底部操作区 */
.bottom-actions {
  margin-top: 40rpx;
  padding-bottom: 20rpx;
}
