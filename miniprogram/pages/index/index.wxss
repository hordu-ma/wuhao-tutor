/* pages/index/index.wxss - 五好伴学小程序首页样式 */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 刷新状态指示器 */
.refresh-indicator {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: rgba(24, 144, 255, 0.9);
  color: #ffffff;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  backdrop-filter: blur(10rpx);
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    transform: translateY(-100%);
  }
  to {
    transform: translateY(0);
  }
}

.refresh-text {
  margin-left: 12rpx;
  font-size: 24rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 32rpx;
}

.loading-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #666666;
}

.main-content {
  padding-bottom: 32rpx;
}

/* 用户信息区域 */
.user-section {
  padding: 40rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  position: relative;
  overflow: hidden;
}

.user-section::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

.user-info {
  position: relative;
  z-index: 1;
  margin-bottom: 32rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.user-role {
  font-size: 24rpx;
}

.user-actions {
  padding: 16rpx;
}

/* 统计数据区域 */
.stats-section {
  position: relative;
  z-index: 1;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120rpx, 1fr));
  gap: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-number {
  font-size: 40rpx;
  line-height: 1.2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  line-height: 1.2;
}

/* 快捷操作区域 */
.quick-actions-section {
  margin: 32rpx 32rpx 0;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333333;
}

.quick-actions-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120rpx, 1fr));
  gap: 20rpx;
  background-color: #ffffff;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.quick-action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 8rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.quick-action-item:hover {
  transform: translateY(-4rpx);
}

.action-icon-wrapper {
  width: 88rpx;
  height: 88rpx;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.quick-action-item:hover .action-icon-wrapper {
  transform: scale(1.1);
}

.action-icon {
  width: 44rpx;
  height: 44rpx;
}

.action-title {
  font-size: 22rpx;
  color: #666666;
  line-height: 1.3;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100rpx;
}

/* 消息通知区域 */
.notifications-section {
  margin: 32rpx 32rpx 0;
}

.notifications-title-wrapper {
  align-items: center;
}

.unread-badge {
  background-color: #f5222d;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 16rpx;
  margin-left: 12rpx;
  min-width: 24rpx;
  text-align: center;
  line-height: 1;
}

.notifications-actions {
  align-items: center;
  gap: 16rpx;
}

.mark-all-btn {
  font-size: 24rpx;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.mark-all-btn:hover {
  background-color: #f5f5f5;
}

.more-btn {
  font-size: 24rpx;
}

.notifications-list {
  margin-top: 16rpx;
}

.notification-item {
  margin-bottom: 16rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.notification-item.unread {
  border-left: 4rpx solid #1890ff;
  background-color: #f0f8ff;
}

.notification-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.notification-item:last-child {
  margin-bottom: 0;
}

.notification-header {
  margin-bottom: 12rpx;
}

.notification-title-wrapper {
  align-items: center;
  flex: 1;
}

.notification-title {
  font-size: 28rpx;
  color: #333333;
}

.priority-badge {
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-left: 12rpx;
  line-height: 1;
}

.priority-badge.high {
  background-color: #fff2e8;
  color: #fa541c;
  border: 1rpx solid #ffbb96;
}

.priority-badge.medium {
  background-color: #fffbe6;
  color: #faad14;
  border: 1rpx solid #ffe58f;
}

.notification-meta {
  align-items: center;
}

.unread-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.notification-time {
  font-size: 20rpx;
}

.notification-content {
  font-size: 24rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.notification-footer {
  align-items: center;
  margin-top: 8rpx;
}

.notification-sender {
  font-size: 20rpx;
}

/* 学习建议区域 */
.suggestions-section {
  margin: 32rpx 32rpx 0;
}

.suggestion-card {
  background: linear-gradient(135deg, #fff7e6 0%, #ffffff 100%);
  border-left: 6rpx solid #faad14;
}

.suggestion-header {
  align-items: center;
  margin-bottom: 16rpx;
}

.suggestion-title {
  font-size: 28rpx;
  color: #333333;
  margin-left: 12rpx;
}

.suggestion-content {
  font-size: 24rpx;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.suggestion-actions {
  text-align: right;
}

/* 学习进度区域 */
.progress-section {
  margin: 32rpx 32rpx 0;
}

.progress-card {
  background: linear-gradient(135deg, #f6ffed 0%, #ffffff 100%);
  border-left: 6rpx solid #52c41a;
}

.progress-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.progress-item:last-child {
  margin-bottom: 0;
}

.progress-label {
  width: 160rpx;
  font-size: 24rpx;
  color: #666666;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  margin: 0 16rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-value {
  font-size: 24rpx;
  color: #52c41a;
  font-weight: bold;
}

.progress-score {
  display: flex;
  align-items: baseline;
}

.score-value {
  font-size: 48rpx;
  margin-right: 8rpx;
}

.score-unit {
  font-size: 24rpx;
}

/* 班级概况区域 */
.class-overview-section {
  margin: 32rpx 32rpx 0;
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-top: 16rpx;
}

.overview-item {
  padding: 24rpx;
  text-align: center;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.overview-number {
  font-size: 40rpx;
  display: block;
  margin-bottom: 8rpx;
}

.overview-label {
  font-size: 24rpx;
}

/* 空状态 */
.empty {
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 32rpx;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .quick-actions-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 16rpx;
    padding: 24rpx;
  }

  .action-icon-wrapper {
    width: 80rpx;
    height: 80rpx;
    border-radius: 20rpx;
  }

  .action-icon {
    width: 40rpx;
    height: 40rpx;
  }

  .action-title {
    font-size: 22rpx;
  }
}

@media screen and (min-width: 1200rpx) {
  .container {
    max-width: 750rpx;
    margin: 0 auto;
  }
}

/* 动画效果 */
.quick-action-item {
  transition: all 0.3s ease;
}

.quick-action-item:active {
  transform: scale(0.95);
}

.card {
  transition: all 0.3s ease;
}

.card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 个性化推荐区域 */
.recommendations-section {
  margin: 32rpx 32rpx 0;
}

.recommendations-list {
  margin-top: 16rpx;
}

.recommendation-item {
  margin-bottom: 16rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.recommendation-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.recommendation-item:last-child {
  margin-bottom: 0;
}

.recommendation-header {
  align-items: flex-start;
}

.recommendation-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.recommendation-content {
  flex: 1;
  min-width: 0;
}

.recommendation-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.recommendation-text {
  font-size: 24rpx;
  line-height: 1.5;
  color: #666666;
}

/* 待办事项区域 */
.todo-section {
  margin: 32rpx 32rpx 0;
}

.todo-list {
  margin-top: 16rpx;
}

.todo-item {
  margin-bottom: 16rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.todo-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.todo-item:last-child {
  margin-bottom: 0;
}

.todo-header {
  align-items: flex-start;
}

.todo-content {
  flex: 1;
  min-width: 0;
}

.todo-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  display: block;
}

.todo-description {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 12rpx;
  display: block;
}

.todo-meta {
  align-items: center;
  gap: 16rpx;
}

.todo-deadline {
  font-size: 20rpx;
}

.todo-priority {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  color: #666666;
}

.high-priority {
  background-color: #fff2f0;
  color: #f5222d;
}

.medium-priority {
  background-color: #fffbe6;
  color: #faad14;
}

.low-priority {
  background-color: #f6ffed;
  color: #52c41a;
}

.todo-actions {
  flex-shrink: 0;
  margin-left: 16rpx;
}

/* 夜间模式支持 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }

  .section-title {
    color: #ffffff;
  }

  .card {
    background-color: #2a2a2a;
    color: #ffffff;
  }

  .notification-title {
    color: #ffffff;
  }

  .suggestion-title {
    color: #ffffff;
  }

  .overview-item {
    background-color: #2a2a2a;
  }

  .recommendation-title {
    color: #ffffff;
  }

  .recommendation-text {
    color: #cccccc;
  }

  .todo-title {
    color: #ffffff;
  }

  .todo-description {
    color: #cccccc;
  }

  .activity-item {
    background-color: #2a2a2a;
  }

  .activity-item:hover {
    background-color: #333333;
  }

  .activity-title {
    color: #ffffff;
  }

  .activity-icon {
    background-color: #1a4d66;
  }
}
