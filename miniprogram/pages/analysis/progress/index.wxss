/* 学习进度页面样式 */

.progress-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 30%, #f5f7fa 30%);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  padding: 40rpx 32rpx 60rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 32rpx;
}

.empty-tip {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}

/* 进度内容 */
.progress-content {
  padding: 0 32rpx;
  margin-top: -40rpx;
}

/* 通用 Section */
.section {
  margin-bottom: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 统计卡片 */
.stats-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
}

.stat-item.highlight {
  grid-column: 1 / -1;
  background: rgba(255, 107, 107, 0.2);
}

.stat-icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
}

.stat-content {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 4rpx;
}

/* 图表标签页 */
.chart-tabs {
  display: flex;
  gap: 16rpx;
}

.chart-tab {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #666666;
  background: #f5f7fa;
  border-radius: 8rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.chart-tab.active {
  color: #ffffff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 图表容器 */
.chart-container {
  width: 100%;
  height: 400rpx;
  margin-top: 24rpx;
}

.ec-canvas {
  width: 100%;
  height: 100%;
}

/* 热力图 */
.heatmap-container {
  width: 100%;
  min-height: 400rpx;
}

.heatmap-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  gap: 16rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #cccccc;
}

/* 时间轴 */
.timeline-container {
  display: flex;
  flex-direction: column;
}

.timeline-item {
  display: flex;
  gap: 24rpx;
  position: relative;
  padding-bottom: 40rpx;
}

.timeline-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 16rpx;
  top: 40rpx;
  width: 2rpx;
  height: calc(100% - 32rpx);
  background: #e5e5e5;
}

.timeline-dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  flex-shrink: 0;
  margin-top: 8rpx;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.timeline-dot.homework {
  background: #667eea;
}

.timeline-dot.question {
  background: #4ecb73;
}

.timeline-dot.achievement {
  background: #ffa502;
}

.timeline-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.timeline-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.timeline-time {
  font-size: 24rpx;
  color: #999999;
}

.timeline-body {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.timeline-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.timeline-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.timeline-stat {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 6rpx;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 32rpx 0;
}

.no-more {
  text-align: center;
  padding: 32rpx 0;
  font-size: 24rpx;
  color: #999999;
}

/* 学习目标 */
.header-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #667eea;
  cursor: pointer;
}

.goals-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.goal-item {
  padding: 24rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
}

.goal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.goal-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.goal-actions {
  display: flex;
  gap: 16rpx;
  color: #667eea;
}

.goal-progress {
  margin-bottom: 12rpx;
}

.goal-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.goal-current {
  color: #667eea;
  font-weight: 500;
}

.goal-deadline {
  color: #999999;
}

.goals-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  padding: 40rpx 0;
}

/* 学习洞察 */
.insights-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.insight-item {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  border-radius: 16rpx;
  border-left: 4rpx solid #667eea;
}

.insight-icon {
  flex-shrink: 0;
  margin-top: 4rpx;
}

.insight-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.insight-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.insight-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 目标弹窗 */
.goal-dialog {
  padding: 32rpx;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.dialog-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.dialog-content {
  margin-bottom: 32rpx;
}

.dialog-footer {
  display: flex;
  gap: 16rpx;
}

.dialog-footer .van-button {
  flex: 1;
}
