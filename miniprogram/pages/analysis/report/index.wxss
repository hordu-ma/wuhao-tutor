/* 学习报告页面样式 */

.report-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx 32rpx;
}

.header-content {
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.header-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  backdrop-filter: blur(10px);
}

/* 时间筛选 */
.time-filter {
  margin: 0 32rpx 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  overflow: hidden;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 200rpx 0;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 32rpx;
}

.empty-tip {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
}

/* 报告内容 */
.report-content {
  padding: 0 32rpx;
}

/* 通用 Section 样式 */
.section {
  margin-bottom: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #999999;
}

/* 学习概览卡片 */
.overview-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.overview-section .section-title,
.overview-section .section-subtitle {
  color: #ffffff;
}

.overview-section .section-subtitle {
  opacity: 0.9;
}

.stat-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 32rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
}

.stat-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
}

.stat-content {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
}

/* 图表容器 */
.chart-container {
  width: 100%;
  height: 500rpx;
  margin-bottom: 24rpx;
}

.ec-canvas {
  width: 100%;
  height: 100%;
}

/* 学科列表 */
.subject-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.subject-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
}

.subject-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.subject-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.subject-count {
  font-size: 24rpx;
  color: #999999;
}

.subject-stats {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.subject-difficulty {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

/* 学习模式卡片 */
.pattern-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.pattern-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: #ffffff;
}

.pattern-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.pattern-value {
  font-size: 36rpx;
  font-weight: bold;
}

/* 建议列表 */
.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  background: #fff9e6;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff9800;
}

.suggestion-icon {
  flex-shrink: 0;
  margin-top: 4rpx;
}

.suggestion-text {
  flex: 1;
  font-size: 28rpx;
  color: #1a1a1a;
  line-height: 1.6;
}

/* 知识缺口 */
.gaps-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.gap-tag {
  padding: 16rpx 24rpx !important;
  font-size: 28rpx !important;
}

/* 知识点掌握度 */
.knowledge-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.knowledge-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.knowledge-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.knowledge-name {
  font-size: 28rpx;
  color: #1a1a1a;
}

.knowledge-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.knowledge-progress {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.knowledge-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
  min-width: 80rpx;
  text-align: right;
}

/* 报告底部 */
.report-footer {
  margin-top: 32rpx;
  text-align: center;
  padding: 24rpx;
}

.update-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}
