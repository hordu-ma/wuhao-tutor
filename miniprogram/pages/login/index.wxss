/* pages/login/index.wxss - 五好伴学小程序登录页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

.login-content {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.app-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* 登录表单区域 */
.login-form {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  margin-bottom: 40rpx;
}

.welcome-text {
  text-align: center;
  margin-bottom: 60rpx;
}

.welcome-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.welcome-desc {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border: none;
  border-radius: 48rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.4);
  transition: all 0.3s ease;
  margin-bottom: 40rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.3);
}

.login-btn[disabled] {
  opacity: 0.7;
  transform: none;
}

/* 网络状态提示 */
.network-warning {
  margin-bottom: 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 错误信息区域 */
.error-section {
  background-color: #fff2f0;
  border: 2rpx solid #ffccc7;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.error-message {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.error-text {
  margin-left: 12rpx;
  font-size: 26rpx;
  color: #cf1322;
  line-height: 1.4;
}

.error-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.retry-btn,
.network-btn {
  background-color: #ff4d4f;
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  min-width: 80rpx;
}

.network-btn {
  background-color: #fa8c16;
}

.retry-btn::after,
.network-btn::after {
  border: none;
}

/* Vant 组件样式覆盖 */
.van-button--primary {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.4);
  transition: all 0.3s ease;
}

.van-button--primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.3);
}

.van-button--primary[disabled] {
  opacity: 0.7;
  transform: none;
}

.van-button--primary .van-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* 加载状态优化 */
.van-loading {
  margin-right: 12rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

.agreement-link {
  color: #1890ff;
  text-decoration: underline;
}

/* 底部装饰 */
.footer {
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 300;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .container {
    padding: 40rpx 32rpx;
  }

  .login-form {
    padding: 48rpx 32rpx;
  }

  .logo {
    width: 120rpx;
    height: 120rpx;
  }

  .app-name {
    font-size: 40rpx;
  }

  .welcome-title {
    font-size: 32rpx;
  }
}

/* 动画效果 */
.logo {
  animation: logoFloat 3s ease-in-out infinite;
}

.login-form {
  animation: formSlideUp 0.8s ease-out;
}

.footer {
  animation: fadeIn 1.2s ease-out;
}

@keyframes logoFloat {
  0%, 100% {
    transform: translateY(0rpx);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

@keyframes formSlideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 夜间模式支持 */
@media (prefers-color-scheme: dark) {
  .login-form {
    background-color: rgba(42, 42, 42, 0.95);
  }

  .welcome-title {
    color: #ffffff;
  }

  .welcome-desc {
    color: #cccccc;
  }

  .agreement-text {
    color: #888888;
  }
}
