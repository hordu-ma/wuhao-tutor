/* è¿›åº¦æŒ‡ç¤ºå™¨ */
.progress-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.stage-steps {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  position: relative;
}

.stage-steps::before {
  content: '';
  position: absolute;
  top: 24rpx;
  left: 15%;
  right: 15%;
  height: 2rpx;
  background: #e5e5e5;
  z-index: 0;
}

.stage-step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
  z-index: 1;
}

.step-circle {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #f5f5f5;
  border: 2rpx solid #d9d9d9;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  transition: all 0.3s;
}

.stage-step.active .step-circle {
  background: #1890ff;
  border-color: #1890ff;
  box-shadow: 0 0 0 4rpx rgba(24, 144, 255, 0.2);
}

.stage-step.completed .step-circle {
  background: #52c41a;
  border-color: #52c41a;
}

.step-number {
  font-size: 24rpx;
  color: #8c8c8c;
  font-weight: 600;
}

.stage-step.active .step-number {
  color: #ffffff;
}

.step-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ffffff;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.5);
    opacity: 0.7;
  }
}

.step-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.step-title {
  font-size: 24rpx;
  color: #595959;
  font-weight: 500;
}

.stage-step.active .step-title {
  color: #1890ff;
  font-weight: 600;
}

.stage-step.completed .step-title {
  color: #52c41a;
}

.step-desc {
