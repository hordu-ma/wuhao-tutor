/* pages/profile/index/index.wxss - 用户信息展示页面样式 */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 32rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

/* 内容区域 */
.content {
  padding: 32rpx;
}

/* 信息卡片通用样式 */
.info-card,
.stats-card,
.actions-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 用户基本信息卡片 */
.info-card {
  padding: 40rpx;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
}

.avatar-section {
  position: relative;
  margin-right: 32rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #e6f7ff;
}

.avatar-edit-hint {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 36rpx;
  height: 36rpx;
  background-color: #1890ff;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #ffffff;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.user-role {
  font-size: 28rpx;
  color: #1890ff;
  background-color: #e6f7ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 24rpx;
  color: #999999;
}

.edit-button {
  padding: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

/* 学校信息 */
.school-info,
.contact-info {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
  margin-top: 24rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.info-row .label {
  font-size: 28rpx;
  color: #666666;
  min-width: 160rpx;
}

.info-row .value {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
  text-align: right;
}

/* 统计信息卡片 */
.stats-card {
  padding: 32rpx;
}

.card-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 32rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 16rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  margin: 0 8rpx;
}

.stat-item:first-child {
  margin-left: 0;
}

.stat-item:last-child {
  margin-right: 0;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #1890ff;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
  margin-top: 8rpx;
}

.date-info {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
}

.date-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.date-label {
  font-size: 26rpx;
  color: #666666;
}

.date-value {
  font-size: 26rpx;
  color: #333333;
}

/* 快捷操作卡片 */
.actions-card {
  padding: 32rpx;
}

.action-list {
  margin-top: 24rpx;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.action-item:last-child {
  border-bottom: none;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #fafafa;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.action-content {
  flex: 1;
}

.action-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 6rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 刷新提示 */
.refresh-hint {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .stats-grid {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .stat-item {
    margin: 0;
  }
  
  .user-header {
    flex-direction: column;
    text-align: center;
  }
  
  .avatar-section {
    margin-right: 0;
    margin-bottom: 24rpx;
  }
  
  .edit-button {
    position: absolute;
    top: 0;
    right: 0;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .info-card,
  .stats-card,
  .actions-card {
    background-color: #2a2a2a;
  }
  
  .user-name {
    color: #ffffff;
  }
  
  .info-row .value,
  .action-title,
  .date-value {
    color: #ffffff;
  }
  
  .info-row .label,
  .stat-label,
  .action-desc,
  .date-label {
    color: #cccccc;
  }
}