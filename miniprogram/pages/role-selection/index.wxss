/* pages/role-selection/index.wxss - 角色选择页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx;
  box-sizing: border-box;
}

/* 头部区域 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.welcome-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 24rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.welcome-text {
  font-size: 44rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* 角色选择区域 */
.role-selection {
  margin-bottom: 40rpx;
}

.roles-container {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.role-card {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  border: 4rpx solid #e8e8e8;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.role-card.selected {
  transform: scale(1.02);
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
}

.role-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, transparent 0%, rgba(255, 255, 255, 0.1) 100%);
  pointer-events: none;
}

.role-icon-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
}

.role-icon-container::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  transform: translate(-50%, -50%);
  animation: iconGlow 3s ease-in-out infinite;
}

@keyframes iconGlow {
  0%, 100% { opacity: 0; }
  50% { opacity: 1; }
}

.role-info {
  flex: 1;
}

.role-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.role-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.selected-icon {
  animation: checkBounce 0.3s ease-out;
}

@keyframes checkBounce {
  0% { transform: scale(0); }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); }
}

.role-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 24rpx;
  display: block;
}

.features-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #888888;
  flex: 1;
}

.role-actions {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
}

.selection-indicator {
  position: absolute;
  top: 0;
  right: 0;
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 0 60rpx 60rpx 0;
  border-color: transparent;
}

.indicator-dot {
  position: absolute;
  top: -45rpx;
  right: -45rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  transform: rotate(45deg);
}

/* 当前角色提示 */
.current-role-tip {
  margin-bottom: 32rpx;
}

/* 操作按钮 */
.actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.confirm-btn {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%) !important;
  border: none !important;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.4);
}

.skip-btn {
  border-color: rgba(255, 255, 255, 0.6) !important;
  color: rgba(255, 255, 255, 0.8) !important;
}

/* 角色说明 */
.role-explanation {
  margin-bottom: 40rpx;
}

.explanation-card {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
}

.explanation-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.explanation-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.explanation-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
}

/* 加载遮罩 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  gap: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: 500;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .container {
    padding: 32rpx 24rpx;
  }
  
  .role-card {
    padding: 24rpx;
  }
  
  .welcome-text {
    font-size: 38rpx;
  }
  
  .role-name {
    font-size: 32rpx;
  }
}

/* 夜间模式支持 */
@media (prefers-color-scheme: dark) {
  .role-card {
    background-color: rgba(42, 42, 42, 0.95);
  }
  
  .role-name {
    color: #ffffff;
  }
  
  .role-description {
    color: #cccccc;
  }
  
  .feature-text {
    color: #999999;
  }
  
  .explanation-card {
    background-color: rgba(42, 42, 42, 0.9);
  }
  
  .explanation-title {
    color: #ffffff;
  }
  
  .explanation-text {
    color: #cccccc;
  }
}

/* 动画效果 */
.role-card {
  animation: cardSlideIn 0.6s ease-out;
}

.role-card:nth-child(1) { animation-delay: 0.1s; }
.role-card:nth-child(2) { animation-delay: 0.2s; }
.role-card:nth-child(3) { animation-delay: 0.3s; }

@keyframes cardSlideIn {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 触觉反馈效果 */
.role-card:active {
  transform: scale(0.98);
}

.role-card.selected:active {
  transform: scale(1);
}