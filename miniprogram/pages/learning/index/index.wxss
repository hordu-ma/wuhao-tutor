/* pages/chat/index/index.wxss - AI问答界面样式 */

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 头部区域 */
.chat-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #1890ff;
  padding: 20rpx 32rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.15);
}

.header-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.ai-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.header-info {
  display: flex;
  align-items: center;
}

.ai-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  line-height: 1.2;
}

.header-actions {
  padding: 8rpx;
}

.history-btn {
  font-size: 28rpx;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background-color: rgba(255, 255, 255, 0.15);
  transition: all 0.2s ease;
}

.history-btn:active {
  background-color: rgba(255, 255, 255, 0.25);
}

/* 聊天消息区域 */
.chat-messages {
  flex: 1;
  padding-top: calc(120rpx + env(safe-area-inset-top));
  padding-bottom: 200rpx;
}

/* 历史消息加载 */
.load-history {
  padding: 24rpx;
  text-align: center;
}

.load-history-btn,
.load-history-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-radius: 48rpx;
  border: 2rpx solid #e8e8e8;
  color: #666;
  font-size: 26rpx;
  margin: 0 auto;
  width: fit-content;
}

.load-history-btn:active {
  background-color: #f0f8ff;
  border-color: #1890ff;
}

/* 欢迎消息 */
.welcome-message {
  padding: 48rpx 32rpx;
  text-align: center;
}

.welcome-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto 24rpx;
}

.welcome-content {
  margin-bottom: 48rpx;
}

.welcome-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.welcome-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.quick-questions-bubbles {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 48rpx;
}

.bubble-item {
  padding: 24rpx 32rpx;
  background-color: #f7f8fa;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #646566;
  text-align: left;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.bubble-item:active {
  background-color: #e6f7ff;
  border-color: #7c3aed;
  color: #7c3aed;
}

/* 消息列表 */
.message-list {
  padding: 0 32rpx;
}

.chat-bubble {
  display: flex;
  margin-bottom: 32rpx;
  align-items: flex-end;
}

.chat-bubble.user {
  flex-direction: row-reverse;
}

.bubble-avatar {
  width: 64rpx;
  height: 64rpx;
  flex-shrink: 0;
  margin: 0 16rpx;
}

.bubble-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.bubble-content {
  position: relative;
  max-width: 70%;
}

.chat-bubble.user .bubble-content {
  text-align: right;
}

.message-status {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.bubble-main {
  position: relative;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.chat-bubble.user .bubble-main {
  background-color: #1890ff;
  color: #fff;
}

.chat-bubble.ai .bubble-main::before {
  content: '';
  position: absolute;
  left: -12rpx;
  bottom: 16rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-right-color: #fff;
}

.chat-bubble.user .bubble-main::before {
  content: '';
  position: absolute;
  right: -12rpx;
  bottom: 16rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-left-color: #1890ff;
}

.bubble-text {
  font-size: 28rpx;
  line-height: 1.6;
  word-wrap: break-word;
}

/* 消息中的图片列表 */
.message-images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}

.message-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

/* 单张图片消息（旧格式） */
.bubble-image {
  max-width: 100%;
  border-radius: 12rpx;
}

.ai-meta {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #f0f0f0;
}

.confidence {
  font-size: 24rpx;
  color: #52c41a;
  margin-bottom: 8rpx;
}

.sources-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.source-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.source-item {
  padding: 4rpx 8rpx;
  background-color: #e6f7ff;
  color: #1890ff;
  border-radius: 6rpx;
  font-size: 22rpx;
}

.bubble-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 12rpx;
  opacity: 0.6;
  transition: opacity 0.2s ease;
}

.bubble-actions:hover {
  opacity: 1;
}

.action-btn {
  padding: 8rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.05);
  transition: background-color 0.2s ease;
}

.action-btn:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.bubble-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

.chat-bubble.user .bubble-time {
  text-align: right;
}

/* 打字指示器 */
.typing-indicator {
  display: flex;
  align-items: flex-end;
  margin: 32rpx;
}

.typing-avatar {
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
}

.typing-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.typing-content {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.typing-content::before {
  content: '';
  position: absolute;
  left: -12rpx;
  bottom: 16rpx;
  width: 0;
  height: 0;
  border: 12rpx solid transparent;
  border-right-color: #fff;
}

.typing-dots {
  display: flex;
  align-items: center;
  gap: 6rpx;
  margin-bottom: 8rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  background-color: #1890ff;
  border-radius: 50%;
  animation: typing 1.5s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%,
  60%,
  100% {
    transform: scale(1);
    opacity: 0.5;
  }
  30% {
    transform: scale(1.3);
    opacity: 1;
  }
}

.typing-text {
  font-size: 24rpx;
  color: #666;
}

.message-spacer {
  height: 100rpx;
}

/* 输入区域 */
.chat-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 2rpx solid #f0f0f0;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 99;
}

/* 图片预览区域 */
.image-preview-area {
  padding: 16rpx;
  background-color: #fafafa;
  border-bottom: 2rpx solid #f0f0f0;
}

.image-preview-scroll {
  white-space: nowrap;
}

.image-preview-list {
  display: inline-flex;
  gap: 16rpx;
  padding: 8rpx;
}

.image-preview-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.preview-image {
  width: 100%;
  height: 100%;
}

.remove-image-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.remove-image-btn:active {
  background-color: rgba(0, 0, 0, 0.8);
}

.upload-status {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* WeChat风格输入区域 */
.wechat-input-area {
  display: flex;
  align-items: flex-end;
  padding: 16rpx 32rpx;
  gap: 16rpx;
  min-height: 88rpx;
}

.input-mode-toggle {
  width: 64rpx;
  height: 64rpx;
  border-radius: 8rpx;
  background-color: #f7f8fa;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.input-mode-toggle:active {
  background-color: #e6f7ff;
}

.input-mode-toggle .van-icon {
  font-size: 48rpx;
  color: #1890ff;
}

.main-input-wrapper {
  flex: 1;
  position: relative;
}

.text-input {
  width: 100%;
  min-height: 64rpx;
  max-height: 200rpx;
  padding: 16rpx 20rpx;
  background-color: #f7f8fa;
  border-radius: 8rpx;
  border: 2rpx solid transparent;
  font-size: 32rpx;
  line-height: 1.4;
  resize: none;
  transition: all 0.2s ease;
}

.text-input:focus {
  background-color: #fff;
  border-color: #1890ff;
}

.voice-input {
  width: 100%;
  height: 64rpx;
  background-color: #f7f8fa;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666;
  transition: all 0.2s ease;
  user-select: none;
}

.voice-input.recording {
  background-color: #ff4d4f;
  color: #fff;
}

.voice-input:active {
  transform: scale(0.98);
}

.image-upload-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 8rpx;
  background-color: #f7f8fa;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.image-upload-btn:active {
  background-color: #e6f7ff;
}

.image-upload-btn .van-icon {
  font-size: 48rpx;
  color: #1890ff;
}

.send-button {
  width: 64rpx;
  height: 64rpx;
  border-radius: 8rpx;
  background-color: #1890ff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.send-button:active {
  transform: scale(0.95);
  background-color: #0050b3;
}

.send-button.disabled {
  background-color: #d9d9d9;
  pointer-events: none;
}

.send-button .van-icon {
  font-size: 44rpx;
  color: #fff;
}

/* 图片上传动作表单 */
.image-action-sheet {
  background-color: #fff;
}

.action-sheet-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  font-size: 32rpx;
  color: #333;
  border-bottom: 2rpx solid #f5f5f5;
}

.action-sheet-item:last-child {
  border-bottom: none;
}

.action-sheet-item .van-icon {
  font-size: 48rpx;
  color: #1890ff;
}

.action-sheet-item:active {
  background-color: #f5f5f5;
}

/* 输入区域 - 通义千问极简风格 */
.input-area {
  padding: 16rpx 32rpx; /* 增加左右内边距 */
}

.input-wrapper {
  display: flex;
  align-items: flex-end;
  gap: 16rpx; /* 恢复间距 */
  min-height: 80rpx;
}

/* 左侧语音按钮 */
.input-left {
  display: flex;
  align-items: center;
  flex-shrink: 0; /* 防止被压缩 */
  width: 80rpx; /* 固定宽度，与右侧保持对称 */
}

.voice-btn-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f7f8fa;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.voice-btn-circle:active {
  background-color: #ede9fe;
  transform: scale(0.95);
}

/* 中间输入框 */
.input-main {
  flex: 1;
  position: relative; /* 关键：为内嵌按钮提供定位基准 */
  transition: all 0.3s ease;
  min-width: 0;
  display: flex;
  align-items: center; /* 垂直居中对齐 */
}

/* 聚焦状态的父容器 - 去除缩放 */
.input-main.focused .input-text {
  background-color: #fff;
  border-color: #7c3aed;
  box-shadow:
    0 0 0 3rpx rgba(124, 58, 237, 0.15),
    /* 外发光 */ 0 4rpx 12rpx rgba(124, 58, 237, 0.1); /* 底部阴影 */
  /* 移除 transform: scale 避免边框溢出 */
}

.input-text {
  width: 100%; /* 完整宽度，由父容器 input-main 控制 */
  height: 80rpx; /* 固定高度，与两侧图标一致 */
  min-height: 80rpx; /* 最小高度80rpx */
  max-height: 200rpx; /* 多行时最大高度 */
  padding: 20rpx 80rpx 20rpx 24rpx; /* 右侧预留80rpx给发送按钮 */
  background-color: #f7f8fa;
  border-radius: 24rpx;
  border: 2rpx solid transparent;
  font-size: 28rpx;
  line-height: 1.5;
  resize: none;
  transition: all 0.3s ease;
  box-sizing: border-box; /* 关键：将 padding 和 border 计入 width */
}

/* 内嵌发送按钮 */
.send-btn-inner {
  position: absolute;
  right: 8rpx; /* 距离输入框右边缘8rpx */
  top: 50%;
  transform: translateY(-50%); /* 垂直居中 */
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  transition: all 0.3s ease;
  z-index: 10;
}

/* 可用状态的发送按钮 */
.send-btn-inner:not(.disabled):active {
  transform: translateY(-50%) scale(0.9);
}

/* 禁用状态的发送按钮 */
.send-btn-inner.disabled {
  pointer-events: none; /* 禁止点击 */
  opacity: 0.5;
}

/* 右侧图片按钮 */
.input-right {
  display: flex;
  align-items: center;
  flex-shrink: 0; /* 防止被压缩 */
  width: 80rpx; /* 固定宽度，保持对称 */
}

.action-btn-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn-circle.image-mode {
  background-color: #f7f8fa;
}

.action-btn-circle.image-mode:active {
  background-color: #ede9fe;
  transform: scale(0.95);
}

/* 网络状态 */
.network-status {
  position: fixed;
  top: calc(120rpx + env(safe-area-inset-top));
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background-color: #faad14;
  color: #fff;
  border-radius: 24rpx;
  font-size: 24rpx;
  z-index: 98;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(-100%);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

/* 滚动到底部按钮 */
.scroll-to-bottom {
  position: fixed;
  bottom: 280rpx;
  right: 32rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #1890ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
  z-index: 97;
  animation: fadeIn 0.3s ease;
}

.scroll-to-bottom:active {
  transform: scale(0.9);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 功能菜单 */
.action-items {
  padding: 32rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
  font-size: 28rpx;
  color: #333;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item:active {
  background-color: #f5f5f5;
}

/* 语音录制 */
.voice-recording {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recording-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.recording-content {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 48rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  z-index: 1;
}

.recording-wave {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.wave-item {
  width: 6rpx;
  background-color: #1890ff;
  border-radius: 3rpx;
  animation: wave 1s infinite ease-in-out;
}

.wave-item:nth-child(1) {
  height: 40rpx;
  animation-delay: 0s;
}
.wave-item:nth-child(2) {
  height: 60rpx;
  animation-delay: 0.1s;
}
.wave-item:nth-child(3) {
  height: 80rpx;
  animation-delay: 0.2s;
}
.wave-item:nth-child(4) {
  height: 60rpx;
  animation-delay: 0.3s;
}
.wave-item:nth-child(5) {
  height: 40rpx;
  animation-delay: 0.4s;
}

@keyframes wave {
  0%,
  40%,
  100% {
    transform: scaleY(0.4);
  }
  20% {
    transform: scaleY(1);
  }
}

.recording-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.recording-tip {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 响应式适配 */
@media (max-width: 320px) {
  .chat-header {
    padding: 16rpx 24rpx;
  }

  .ai-name {
    font-size: 28rpx;
  }

  .bubble-main {
    padding: 16rpx 20rpx;
  }

  .input-wrapper {
    gap: 12rpx;
  }

  .send-btn {
    width: 64rpx;
    height: 64rpx;
  }
}

/* 历史会话弹窗 */
.history-popup {
  padding: 32rpx 0;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.history-list {
  max-height: calc(60vh - 120rpx);
  padding: 16rpx 0;
}

.history-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  gap: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #f7f8fa;
  transition: all 0.2s ease;
}

.history-item:active {
  background-color: #f7f8fa;
}

.history-item.active {
  background-color: #f0f8ff;
  border-left: 6rpx solid #7c3aed;
  padding-left: 26rpx;
}

.history-item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.history-item-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.title-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 500rpx;
}

.history-item.active .title-text {
  color: #7c3aed;
}

.history-item-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.meta-count {
  color: #666;
}

.meta-divider {
  color: #ddd;
}

.meta-time {
  color: #999;
}

/* ========== 语音录制状态 ========== */
.voice-recording-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recording-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

/* 波纹动画容器 */
.recording-wave-container {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wave-circle {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: rgba(124, 58, 237, 0.3);
  animation: wave-pulse 2s ease-out infinite;
}

.wave-circle.wave-1 {
  animation-delay: 0s;
}

.wave-circle.wave-2 {
  animation-delay: 0.6s;
}

.wave-circle.wave-3 {
  animation-delay: 1.2s;
}

@keyframes wave-pulse {
  0% {
    transform: scale(0.5);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

.recording-icon {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  background: #7c3aed;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(124, 58, 237, 0.4);
}

.recording-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
}

.recording-duration {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}
