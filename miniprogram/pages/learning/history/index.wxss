/* pages/chat/history/index.wxss - 问答历史记录页面样式 */

.history-container {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 统计卡片 */
.statistics-card {
  background: white;
  margin: -30rpx 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  text-align: center;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: -1px;
  top: 20%;
  height: 60%;
  width: 1px;
  background-color: #eee;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 工具栏 */
.toolbar {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: white;
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  gap: 20rpx;
}

.search-box {
  flex: 1;
}

.actions {
  display: flex;
  gap: 16rpx;
}

/* 批量操作栏 */
.batch-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff3cd;
  margin: 0 30rpx 20rpx;
  border-radius: 12rpx;
}

.selected-count {
  font-size: 26rpx;
  color: #856404;
}

.batch-actions {
  display: flex;
  gap: 16rpx;
}

/* 内容区域 */
.content {
  flex: 1;
}

/* 历史记录列表 */
.history-list {
  padding: 0 30rpx;
}

.history-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  transition: all 0.3s;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.history-item:active {
  transform: scale(0.98);
}

.history-item.selected {
  background: #e3f2fd;
  border: 2rpx solid #1989fa;
}

.selection-box {
  margin-right: 20rpx;
  margin-top: 8rpx;
}

.item-content {
  flex: 1;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.tags {
  display: flex;
  gap: 12rpx;
}

.subject-tag {
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: white;
}

.subject-tag.subject-math {
  background: #ff6b6b;
}

.subject-tag.subject-chinese {
  background: #4ecdc4;
}

.subject-tag.subject-english {
  background: #45b7d1;
}

.subject-tag.subject-physics {
  background: #96ceb4;
}

.subject-tag.subject-chemistry {
  background: #ffeaa7;
  color: #333;
}

.type-tag {
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  font-size: 22rpx;
  color: #666;
}

.meta-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.question-content {
  margin-bottom: 16rpx;
}

.question-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.answer-preview {
  margin-bottom: 16rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #1989fa;
}

.answer-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  font-size: 22rpx;
  color: #999;
}

.quick-actions {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #1989fa;
}

.item-arrow {
  margin-left: 20rpx;
  margin-top: 8rpx;
  color: #ccc;
}

/* 加载状态 */
.load-more {
  text-align: center;
  padding: 40rpx;
}

.load-more-text {
  color: #999;
  font-size: 26rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 筛选弹窗 */
.filter-popup {
  height: 70vh;
  display: flex;
  flex-direction: column;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
  font-size: 32rpx;
  font-weight: bold;
}

.filter-content {
  flex: 1;
  padding: 30rpx;
}

.filter-section {
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.option-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.option-item {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.option-item.active {
  background: #1989fa;
  color: white;
}

.sort-options {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.filter-footer {
  padding: 30rpx;
  border-top: 1px solid #eee;
}
