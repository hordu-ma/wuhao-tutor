/* 测试页面样式 */
/* 路径: miniprogram/pages/test-async/index.wxss */

.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.result-box {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  min-height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.result-box.status-pending {
  border-left: 8rpx solid #1890ff;
}

.result-box.status-success {
  border-left: 8rpx solid #52c41a;
}

.result-box.status-error {
  border-left: 8rpx solid #ff4d4f;
}

.result-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
  text-align: center;
}

.info-box {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.info-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-item {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 2;
  padding-left: 20rpx;
}

.retry-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.help-box {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  border: 2rpx solid #ff4d4f;
}

.help-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-bottom: 20rpx;
}

.help-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 2;
  padding-left: 20rpx;
}
