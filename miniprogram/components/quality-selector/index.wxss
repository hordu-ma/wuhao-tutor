/* components/quality-selector/index.wxss */

.selector-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9998;
  display: flex;
  align-items: flex-end;
}

.selector-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.3s;
}

.selector-content {
  position: relative;
  width: 100%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  animation: slideUp 0.3s;
  overflow: hidden;
}

/* 标题栏 */
.selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #ebeef5;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
}

.header-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f5f7fa;
}

.close-icon {
  font-size: 32rpx;
  color: #909399;
}

/* 预设列表 */
.presets-list {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.preset-item {
  padding: 32rpx;
  margin-bottom: 24rpx;
  background-color: #f5f7fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.preset-item:last-child {
  margin-bottom: 0;
}

.preset-item.active {
  background-color: #ecf5ff;
  border-color: #409eff;
  box-shadow: 0 4rpx 12rpx rgba(64, 158, 255, 0.15);
}

.preset-item:active {
  transform: scale(0.98);
}

/* 预设头部 */
.preset-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.preset-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.preset-info {
  flex: 1;
}

.preset-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.preset-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-right: 12rpx;
}

.recommended-badge {
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  color: #67c23a;
  background-color: #f0f9ff;
  border: 1rpx solid #67c23a;
  border-radius: 4rpx;
}

.preset-size {
  font-size: 24rpx;
  color: #909399;
}

.preset-check {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #409eff;
  border-radius: 50%;
}

.check-icon {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

/* 描述 */
.preset-description {
  display: block;
  font-size: 26rpx;
  color: #606266;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

/* 详细参数 */
.preset-details {
  display: flex;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.detail-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
}

.detail-label {
  font-size: 22rpx;
  color: #909399;
  margin-bottom: 4rpx;
}

.detail-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #303133;
}

/* 质量指示器 */
.quality-indicator {
  width: 100%;
  height: 8rpx;
  background-color: #e4e7ed;
  border-radius: 4rpx;
  overflow: hidden;
}

.indicator-bar {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s;
}

/* 提示信息 */
.selector-tips {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #fef0f0;
  border-top: 1rpx solid #fde2e2;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.tips-text {
  flex: 1;
  font-size: 24rpx;
  color: #f56c6c;
  line-height: 1.6;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .preset-icon {
    font-size: 40rpx;
  }

  .preset-name {
    font-size: 28rpx;
  }

  .preset-details {
    gap: 16rpx;
  }

  .detail-label {
    font-size: 20rpx;
  }

  .detail-value {
    font-size: 22rpx;
  }
}
