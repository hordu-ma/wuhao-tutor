/* components/homework-card/index.wxss */

.homework-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.homework-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.homework-card.pending {
  border-left: 8rpx solid var(--primary-color, #1890ff);
}

.homework-card.in_progress {
  border-left: 8rpx solid var(--warning-color, #faad14);
}

.homework-card.completed {
  border-left: 8rpx solid var(--success-color, #52c41a);
}

.homework-card.graded {
  border-left: 8rpx solid #722ed1;
}

.homework-card.overdue {
  border-left: 8rpx solid var(--error-color, #f5222d);
  background: #fff2f0;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.subject-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.subject-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
}

.subject-tag[data-subject="语文"] {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
}

.subject-tag[data-subject="数学"] {
  background: linear-gradient(135deg, #4ecdc4, #44a08d);
}

.subject-tag[data-subject="英语"] {
  background: linear-gradient(135deg, #45b7d1, #2196f3);
}

.subject-tag[data-subject="物理"] {
  background: linear-gradient(135deg, #96ceb4, #85c1e9);
}

.subject-tag[data-subject="化学"] {
  background: linear-gradient(135deg, #feca57, #ff9ff3);
}

.subject-tag[data-subject="生物"] {
  background: linear-gradient(135deg, #6c5ce7, #a29bfe);
}

.subject-tag[data-subject="历史"] {
  background: linear-gradient(135deg, #fd79a8, #fdcb6e);
}

.subject-tag[data-subject="地理"] {
  background: linear-gradient(135deg, #55a3ff, #003d82);
}

.subject-tag[data-subject="政治"] {
  background: linear-gradient(135deg, #fd79a8, #e84393);
}

.difficulty-tag {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  background: #f5f5f5;
  color: #666;
}

.difficulty-tag.easy {
  background: #f6ffed;
  color: #52c41a;
}

.difficulty-tag.medium {
  background: #fffbe6;
  color: #faad14;
}

.difficulty-tag.hard {
  background: #fff2f0;
  color: #f5222d;
}

.status-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.status-tag {
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-tag.pending {
  background: #e6f7ff;
  color: #1890ff;
}

.status-tag.in_progress {
  background: #fff7e6;
  color: #faad14;
}

.status-tag.completed {
  background: #f6ffed;
  color: #52c41a;
}

.status-tag.graded {
  background: #f9f0ff;
  color: #722ed1;
}

.status-tag.overdue {
  background: #fff2f0;
  color: #f5222d;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 24rpx;
}

.homework-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color, #333);
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.homework-description {
  font-size: 28rpx;
  color: var(--text-color-secondary, #666);
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.questions-preview {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: #fafafa;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.question-count {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: var(--text-color-secondary, #666);
}

.question-types {
  display: flex;
  gap: 12rpx;
}

.type-item {
  padding: 4rpx 12rpx;
  background: #fff;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: var(--text-color-secondary, #666);
  border: 1rpx solid #e8e8e8;
}

.attachments {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: var(--primary-color, #1890ff);
  margin-top: 12rpx;
}

/* 时间信息 */
.time-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  font-size: 24rpx;
}

.create-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: var(--text-color-placeholder, #999);
}

.deadline {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-weight: 500;
}

.deadline.normal {
  color: var(--text-color-secondary, #666);
}

.deadline.warning {
  color: var(--warning-color, #faad14);
}

.deadline.danger {
  color: var(--error-color, #f5222d);
}

/* 进度信息 */
.progress-info {
  margin-bottom: 24rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-color, #1890ff), #40a9ff);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-color-secondary, #666);
}

/* 成绩信息 */
.grade-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.grade-score {
  display: flex;
  align-items: baseline;
  color: #fff;
}

.score {
  font-size: 36rpx;
  font-weight: 700;
}

.total {
  font-size: 28rpx;
  margin-left: 4rpx;
  opacity: 0.8;
}

.grade-level {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
}

.grade-level.excellent {
  background: rgba(82, 196, 26, 0.2);
}

.grade-level.good {
  background: rgba(24, 144, 255, 0.2);
}

.grade-level.average {
  background: rgba(250, 173, 20, 0.2);
}

.grade-level.poor {
  background: rgba(245, 34, 45, 0.2);
}

/* 操作按钮区域 */
.card-actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.student-actions,
.teacher-actions,
.parent-actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
  width: 100%;
}

.card-actions .van-button {
  flex: 1;
  min-width: 120rpx;
  height: 64rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
}

/* 状态指示器 */
.submit-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
  border-radius: 24rpx;
  font-size: 26rpx;
  z-index: 10;
}

/* 收藏按钮 */
.favorite-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  backdrop-filter: blur(8rpx);
  z-index: 5;
}

/* 标识徽章 */
.new-badge {
  position: absolute;
  top: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  color: #fff;
  font-size: 20rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 16rpx 0 24rpx;
}

.overdue-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  background: var(--error-color, #f5222d);
  color: #fff;
  font-size: 22rpx;
  border-radius: 16rpx;
  z-index: 5;
}

.ai-recommended {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  font-size: 22rpx;
  border-radius: 16rpx;
  z-index: 5;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .homework-card {
    padding: 24rpx;
    margin-bottom: 16rpx;
  }

  .homework-title {
    font-size: 28rpx;
  }

  .homework-description {
    font-size: 26rpx;
  }

  .card-actions .van-button {
    min-width: 100rpx;
    height: 56rpx;
    font-size: 24rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .homework-card {
    background: #2a2a2a;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  }

  .homework-card.overdue {
    background: #3a2626;
  }

  .questions-preview {
    background: #3a3a3a;
  }

  .type-item {
    background: #4a4a4a;
    border-color: #5a5a5a;
    color: #ccc;
  }

  .progress-bar {
    background: #4a4a4a;
  }

  .favorite-btn {
    background: rgba(42, 42, 42, 0.9);
  }
}

/* 动画效果 */
@keyframes cardEnter {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.homework-card {
  animation: cardEnter 0.4s ease-out;
}

/* 加载骨架屏 */
.homework-card.skeleton {
  position: relative;
  overflow: hidden;
}

.homework-card.skeleton::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.4),
    transparent
  );
  animation: skeleton-loading 1.5s infinite;
}

@keyframes skeleton-loading {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}

/* 拖拽排序支持 */
.homework-card.dragging {
  opacity: 0.7;
  transform: scale(1.05);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  z-index: 100;
}

/* 滑动操作支持 */
.homework-card.swiping {
  transform: translateX(var(--swipe-offset, 0));
  transition: transform 0.2s ease;
}

.homework-card .swipe-actions {
  position: absolute;
  top: 0;
  right: -200rpx;
  width: 200rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.swipe-action {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 26rpx;
}

.swipe-action.delete {
  background: var(--error-color, #f5222d);
}

.swipe-action.edit {
  background: var(--warning-color, #faad14);
}

.swipe-action.archive {
  background: var(--text-color-secondary, #666);
}
