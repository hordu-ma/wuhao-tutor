.voice-input {
  padding: 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 空闲状态 */
.voice-idle {
  text-align: center;
}

.voice-tips {
  margin-top: 16rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}

/* 录音中状态 */
.voice-recording {
  text-align: center;
}

.recording-visual {
  margin-bottom: 24rpx;
}

.wave-container {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.wave-bar {
  width: 8rpx;
  background: linear-gradient(to top, #1890ff, #40a9ff);
  margin: 0 2rpx;
  border-radius: 4rpx;
  transition: height 0.1s ease;
  min-height: 20%;
}

.recording-info {
  text-align: center;
}

.recording-text {
  display: block;
  font-size: 28rpx;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.recording-time {
  font-size: 32rpx;
  font-weight: bold;
  color: #f5222d;
}

.recording-actions {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

/* 处理中状态 */
.voice-processing {
  text-align: center;
  padding: 32rpx 0;
}

.processing-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.processing-text {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #666;
}

/* 完成状态 */
.voice-completed {
  /* 样式 */
}

.result-content {
  margin-bottom: 24rpx;
}

.audio-info {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.duration-text {
  margin-left: 8rpx;
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.play-btn {
  padding: 8rpx;
}

.recognize-result {
  padding: 16rpx;
  background-color: #f6ffed;
  border: 2rpx solid #b7eb8f;
  border-radius: 12rpx;
}

.result-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.completed-actions {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

/* 错误状态 */
.voice-error {
  text-align: center;
  padding: 32rpx 0;
}

.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
}

.error-text {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #f5222d;
}

.error-actions {
  display: flex;
  justify-content: center;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .voice-input {
    padding: 16rpx;
  }
  
  .wave-container {
    height: 60rpx;
  }
  
  .recording-time {
    font-size: 28rpx;
  }
}