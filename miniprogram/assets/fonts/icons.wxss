/* ========== 图标动画 ========== */
.icon-spin {
  animation: icon-spin 1s linear infinite;
}

.icon-pulse {
  animation: icon-pulse 1.5s ease-in-out infinite;
}

.icon-bounce {
  animation: icon-bounce 1s ease infinite;
}

.icon-shake {
  animation: icon-shake 0.5s ease-in-out infinite;
}

@keyframes icon-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes icon-pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.1);
  }
}

@keyframes icon-bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-6rpx);
  }
  60% {
    transform: translateY(-3rpx);
  }
}

@keyframes icon-shake {
  0%, 100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-2rpx);
  }
  75% {
    transform: translateX(2rpx);
  }
}

/* ========== 图标组合 ========== */
.icon-with-text {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
}

.icon-with-text .icon {
  flex-shrink: 0;
}

.icon-stack {
  position: relative;
  display: inline-block;
}

.icon-stack .icon:first-child {
  position: relative;
  z-index: 1;
}

.icon-stack .icon:last-child {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}

/* ========== 图标状态 ========== */
.icon-hover:hover {
  opacity: 0.8;
  transform: scale(1.1);
  transition: all 0.2s ease;
}

.icon-active {
  color: var(--primary-color, #1890ff);
  transform: scale(1.1);
}

.icon-disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* ========== 响应式图标 ========== */
@media (max-width: 375px) {
  .icon-responsive {
    font-size: 32rpx;
  }
}

@media (min-width: 376px) and (max-width: 414px) {
  .icon-responsive {
    font-size: 40rpx;
  }
}

@media (min-width: 415px) {
  .icon-responsive {
    font-size: 48rpx;
  }
}

