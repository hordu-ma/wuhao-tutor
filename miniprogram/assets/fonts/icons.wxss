/* ========== 字体图标定义 ========== */
@font-face {
  font-family: 'wuhao-icons';
  src: url('data:font/woff2;base64,') format('woff2');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

/* ========== 基础图标类 ========== */
.icon {
  font-family: 'wuhao-icons', sans-serif;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  display: inline-block;
  vertical-align: middle;
}

