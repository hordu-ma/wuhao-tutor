/* components/ocr-progress/index.wxss */

.progress-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9997;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progress-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  animation: fadeIn 0.3s;
}

.progress-content {
  position: relative;
  width: 90%;
  max-width: 700rpx;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  animation: slideIn 0.3s;
  overflow: hidden;
}

/* 标题栏 */
.progress-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #ebeef5;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.header-stats {
  margin-right: 24rpx;
}

.stats-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.header-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
}

.close-icon {
  font-size: 32rpx;
  color: #fff;
}

/* 总体进度 */
.overall-progress {
  padding: 32rpx;
  background-color: #f5f7fa;
  border-bottom: 1rpx solid #ebeef5;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #606266;
  font-weight: 600;
}

.progress-percent {
  font-size: 32rpx;
  font-weight: bold;
  color: #409eff;
}

.progress-bar-wrapper {
  width: 100%;
  height: 16rpx;
  background-color: #e4e7ed;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #409eff 0%, #67c23a 100%);
  border-radius: 8rpx;
  transition: width 0.3s;
}

.progress-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  font-size: 24rpx;
}

.stat-item.success {
  color: #67c23a;
}

.stat-item.failed {
  color: #f56c6c;
}

/* 图片列表 */
.images-list {
  flex: 1;
  overflow-y: auto;
  padding: 16rpx;
}

.image-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #ebeef5;
  overflow: hidden;
  transition: all 0.3s;
}

.image-item.success {
  border-color: #67c23a;
}

.image-item.failed {
  border-color: #f56c6c;
}

.image-item.processing {
  border-color: #409eff;
  animation: pulse 2s infinite;
}

/* 图片卡片头部 */
.item-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  gap: 24rpx;
}

.item-thumbnail {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background-color: #f5f7fa;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  min-width: 0;
}

.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.item-index {
  font-size: 28rpx;
  font-weight: 600;
  color: #303133;
}

.status-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.status-badge.pending {
  background-color: #f4f4f5;
  color: #909399;
}

.status-badge.processing {
  background-color: #ecf5ff;
  color: #409eff;
}

.status-badge.success {
  background-color: #f0f9ff;
  color: #67c23a;
}

.status-badge.failed {
  background-color: #fef0f0;
  color: #f56c6c;
}

.status-icon {
  font-size: 24rpx;
}

.status-text {
  font-size: 24rpx;
}

/* 置信度 */
.confidence-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.confidence-label {
  font-size: 24rpx;
  color: #909399;
}

.confidence-value {
  font-size: 24rpx;
  font-weight: 600;
}

.confidence-level {
  font-size: 22rpx;
}

/* 错误信息 */
.error-message {
  font-size: 24rpx;
  color: #f56c6c;
  line-height: 1.5;
}

/* 展开图标 */
.item-actions {
  flex-shrink: 0;
}

.expand-icon {
  display: inline-block;
  font-size: 24rpx;
  color: #909399;
  transition: transform 0.3s;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

/* 详情内容 */
.item-detail {
  padding: 0 24rpx 24rpx;
  border-top: 1rpx solid #ebeef5;
  animation: expandDown 0.3s;
}

/* OCR文本区域 */
.ocr-text-section {
  margin-top: 16rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #606266;
}

.section-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  background-color: #ecf5ff;
  color: #409eff;
  border: none;
  border-radius: 8rpx;
}

.ocr-text-content {
  padding: 24rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  max-height: 300rpx;
  overflow-y: auto;
}

.ocr-text {
  font-size: 26rpx;
  color: #303133;
  line-height: 1.8;
  word-break: break-all;
}

/* 错误操作 */
.error-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.retry-btn,
.delete-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.retry-btn {
  background-color: #409eff;
  color: #fff;
}

.delete-btn {
  background-color: #f56c6c;
  color: #fff;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 处理动画 */
.processing-animation {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  gap: 16rpx;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #ebeef5;
  border-top-color: #409eff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.processing-text {
  font-size: 24rpx;
  color: #909399;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  gap: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
}

/* 底部操作栏 */
.progress-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #ebeef5;
  background-color: #fff;
}

.footer-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.footer-btn.secondary {
  background-color: #f5f7fa;
  color: #606266;
}

.footer-btn.primary {
  background-color: #409eff;
  color: #fff;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes expandDown {
  from {
    opacity: 0;
    max-height: 0;
  }
  to {
    opacity: 1;
    max-height: 1000rpx;
  }
}

@keyframes pulse {
  0%,
  100% {
    box-shadow: 0 0 0 0 rgba(64, 158, 255, 0.4);
  }
  50% {
    box-shadow: 0 0 0 8rpx rgba(64, 158, 255, 0);
  }
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .progress-content {
    width: 95%;
  }

  .item-thumbnail {
    width: 100rpx;
    height: 100rpx;
  }

  .ocr-text {
    font-size: 24rpx;
  }
}
