# 环境配置模板
# 复制此文件为 .env 并填入实际配置值

# 环境类型：development, testing, production
ENVIRONMENT=development

# 应用配置
PROJECT_NAME=五好伴学
SECRET_KEY=your-secret-key-here-at-least-32-characters-long

# 服务器配置
HOST=127.0.0.1
PORT=8000
DEBUG=true

# 数据库配置
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=wuhao_tutor_dev
POSTGRES_PORT=5432

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS配置
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# 阿里云配置
ALICLOUD_ACCESS_KEY_ID=your-alicloud-access-key-id
ALICLOUD_ACCESS_KEY_SECRET=your-alicloud-access-key-secret
ALICLOUD_REGION=cn-hangzhou

# OSS 文件存储配置
OSS_BUCKET_NAME=your-oss-bucket-name
OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com

# 短信服务配置
SMS_ACCESS_KEY_ID=your-sms-access-key-id
SMS_ACCESS_KEY_SECRET=your-sms-access-key-secret
SMS_SIGN_NAME=五好伴学
SMS_TEMPLATE_CODE=SMS_123456789

# 微信配置
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
WECHAT_MINI_PROGRAM_APP_ID=your-mini-program-app-id
WECHAT_MINI_PROGRAM_APP_SECRET=your-mini-program-app-secret

# 日志配置
LOG_LEVEL=DEBUG
LOG_FORMAT=console