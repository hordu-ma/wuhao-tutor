/* pages/homework/history/index.wxss - 作业历史记录页面样式 */

.history-container {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  color: white;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 统计卡片 */
.statistics-card {
  background: white;
  margin: -30rpx 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  text-align: center;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: -1px;
  top: 20%;
  height: 60%;
  width: 1px;
  background-color: #eee;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: white;
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
}

.view-mode {
  display: flex;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 6rpx;
}

.mode-item {
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s;
}

.mode-item.active {
  background: white;
  color: #1989fa;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.actions {
  display: flex;
  gap: 20rpx;
}

/* 内容区域 */
.content {
  flex: 1;
}

/* 历史记录列表 */
.history-list {
  padding: 0 30rpx;
}

.history-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  transition: transform 0.2s;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.history-item:active {
  transform: scale(0.98);
}

.item-icon {
  margin-right: 24rpx;
}

.subject-tag {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 22rpx;
  font-weight: bold;
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.item-meta {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  margin-bottom: 16rpx;
}

.submit-time,
.correct-time {
  font-size: 24rpx;
  color: #999;
}

.score-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.score {
  font-size: 28rpx;
  font-weight: bold;
  color: #1989fa;
}

.grade {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.grade-A\\ + {
  background: #ff4757;
  color: white;
}

.grade-A {
  background: #ff6b6b;
  color: white;
}

.grade-B\\ + {
  background: #ffa502;
  color: white;
}

.grade-B {
  background: #ffb347;
  color: white;
}

.grade-C\\ + {
  background: #70a1ff;
  color: white;
}

.grade-C {
  background: #7bed9f;
  color: white;
}

.excellent-badge {
  display: flex;
  align-items: center;
  gap: 4rpx;
  color: #ffd700;
  font-size: 22rpx;
  font-weight: bold;
}

.item-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-tag {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-tag.pending {
  background: #fff3cd;
  color: #856404;
}

.status-tag.completed {
  background: #d4edda;
  color: #155724;
}

/* 加载状态 */
.load-more {
  text-align: center;
  padding: 40rpx;
}

.load-more-text {
  color: #999;
  font-size: 26rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 图表模式 */
.chart-view {
  background: white;
  margin: 0 30rpx;
  border-radius: 20rpx;
  min-height: 600rpx;
}

.chart-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
  gap: 30rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

/* 筛选弹窗 */
.filter-popup {
  height: 70vh;
  display: flex;
  flex-direction: column;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
  font-size: 32rpx;
  font-weight: bold;
}

.filter-content {
  flex: 1;
  padding: 30rpx;
}

.filter-section {
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.option-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.option-item {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.option-item.active {
  background: #1989fa;
  color: white;
}

.sort-options {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.sort-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  font-size: 26rpx;
}

.filter-footer {
  padding: 30rpx;
  border-top: 1px solid #eee;
}
