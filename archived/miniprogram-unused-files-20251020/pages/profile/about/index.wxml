<!-- 关于我们页面 -->
<view class="about-container">
  <!-- 应用信息 -->
  <view class="app-info">
    <image class="app-logo" src="/assets/images/logo.png" mode="aspectFit" />
    <view class="app-name">五好伴学</view>
    <view class="app-slogan">专业的K12学习辅导助手</view>
    <view class="app-version">版本 {{appVersion}}</view>
    
    <view class="update-info" wx:if="{{hasUpdate}}">
      <van-tag type="success" plain>有新版本</van-tag>
      <text class="update-tips">点击检查更新获取最新功能</text>
    </view>
  </view>

  <!-- 核心功能 -->
  <view class="section features-section">
    <view class="section-title">
      <van-icon name="star-o" size="20px" color="#667eea" />
      <text>核心功能</text>
    </view>
    <view class="features-grid">
      <view class="feature-item" wx:for="{{features}}" wx:key="id">
        <van-icon name="{{item.icon}}" size="36px" color="{{item.color}}" />
        <view class="feature-name">{{item.name}}</view>
        <view class="feature-desc">{{item.desc}}</view>
      </view>
    </view>
  </view>

  <!-- 团队介绍 -->
  <view class="section team-section">
    <view class="section-title">
      <van-icon name="friends-o" size="20px" color="#667eea" />
      <text>关于团队</text>
    </view>
    <view class="team-content">
      <text class="team-intro">{{teamIntro}}</text>
      
      <view class="team-stats">
        <view class="stat-item" wx:for="{{teamStats}}" wx:key="label">
          <view class="stat-value">{{item.value}}</view>
          <view class="stat-label">{{item.label}}</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 技术支持 -->
  <view class="section tech-section">
    <view class="section-title">
      <van-icon name="setting-o" size="20px" color="#667eea" />
      <text>技术支持</text>
    </view>
    <view class="tech-list">
      <view class="tech-item" wx:for="{{techStack}}" wx:key="name">
        <view class="tech-name">{{item.name}}</view>
        <view class="tech-desc">{{item.desc}}</view>
      </view>
    </view>
  </view>

  <!-- 开源许可 -->
  <view class="section license-section">
    <view class="section-title">
      <van-icon name="certificate" size="20px" color="#667eea" />
      <text>开源许可</text>
    </view>
    <view class="license-list">
      <view class="license-item" wx:for="{{licenses}}" wx:key="name" bindtap="viewLicense" data-url="{{item.url}}">
        <view class="license-info">
          <text class="license-name">{{item.name}}</text>
          <text class="license-type">{{item.type}}</text>
        </view>
        <van-icon name="arrow" color="#c8c9cc" />
      </view>
    </view>
  </view>

  <!-- 法律信息 -->
  <view class="section legal-section">
    <view class="section-title">
      <van-icon name="description" size="20px" color="#667eea" />
      <text>法律信息</text>
    </view>
    <view class="legal-list">
      <view class="legal-item" wx:for="{{legalDocs}}" wx:key="id" bindtap="viewLegalDoc" data-id="{{item.id}}">
        <text class="legal-name">{{item.name}}</text>
        <van-icon name="arrow" color="#c8c9cc" />
      </view>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="action-buttons">
    <van-button type="primary" size="large" block bindtap="checkUpdate">
      <van-icon name="upgrade" />
      检查更新
    </van-button>
    
    <van-button plain type="default" size="large" block bindtap="clearCache" custom-class="clear-btn">
      <van-icon name="delete-o" />
      清除缓存 ({{cacheSize}})
    </van-button>
  </view>

  <!-- 版权信息 -->
  <view class="copyright">
    <text class="copyright-text">© 2024 五好伴学团队</text>
    <text class="copyright-text">All Rights Reserved</text>
    <text class="icp-text">京ICP备xxxxxxxx号</text>
  </view>
</view>
