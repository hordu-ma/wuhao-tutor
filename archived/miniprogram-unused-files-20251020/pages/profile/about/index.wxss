/* 关于我们页面样式 */

.about-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 40rpx;
}

/* 应用信息 */
.app-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  position: relative;
  overflow: hidden;
}

.app-info::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: pulse 4s ease-in-out infinite;
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.3;
  }
}

.app-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
}

.app-slogan {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.app-version {
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  position: relative;
  z-index: 1;
}

.update-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 24rpx;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
  position: relative;
  z-index: 1;
}

.update-tips {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 通用区块样式 */
.section {
  margin-top: 16rpx;
  background: #ffffff;
  padding: 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 32rpx;
}

/* 核心功能 */
.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.feature-item:active {
  transform: scale(0.95);
  background: #ebeef5;
}

.feature-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  line-height: 1.5;
}

/* 团队介绍 */
.team-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.team-intro {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
  text-align: justify;
}

.team-stats {
  display: flex;
  justify-content: space-around;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
  border-radius: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
}

/* 技术支持 */
.tech-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tech-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 24rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.tech-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.tech-desc {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
}

/* 开源许可 */
.license-list {
  display: flex;
  flex-direction: column;
}

.license-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.license-item:last-child {
  border-bottom: none;
}

.license-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.license-name {
  font-size: 28rpx;
  color: #1a1a1a;
}

.license-type {
  font-size: 24rpx;
  color: #999999;
}

/* 法律信息 */
.legal-list {
  display: flex;
  flex-direction: column;
}

.legal-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.legal-item:last-child {
  border-bottom: none;
}

.legal-name {
  font-size: 28rpx;
  color: #1a1a1a;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 32rpx;
  margin-top: 16rpx;
  background: #ffffff;
}

.clear-btn {
  color: #ff6b6b !important;
  border-color: #ff6b6b !important;
}

/* 版权信息 */
.copyright {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 48rpx 32rpx 32rpx;
  margin-top: 16rpx;
}

.copyright-text,
.icp-text {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}
