/* pages/chat/favorites/index.wxss - 问答收藏管理页面样式 */

.favorites-container {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
  padding: 60rpx 40rpx 40rpx;
  color: #333;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 分类导航 */
.category-nav {
  background: white;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 0 30rpx;
  gap: 30rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  min-width: 120rpx;
  padding: 20rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s;
  position: relative;
}

.category-item.active {
  background: #fff3cd;
  transform: scale(1.05);
}

.category-item.active .category-name {
  color: #856404;
  font-weight: bold;
}

.category-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.category-count {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: #ff4757;
  color: white;
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  text-align: center;
}

/* 搜索和工具栏 */
.toolbar {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: white;
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  gap: 20rpx;
}

.search-box {
  flex: 1;
}

.actions {
  display: flex;
  gap: 16rpx;
}

/* 批量操作栏 */
.batch-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff3cd;
  margin: 0 30rpx 20rpx;
  border-radius: 12rpx;
}

.selected-count {
  font-size: 26rpx;
  color: #856404;
}

.batch-actions {
  display: flex;
  gap: 16rpx;
}

/* 内容区域 */
.content {
  flex: 1;
}

/* 收藏列表 */
.favorites-list {
  padding: 0 30rpx;
}

.favorite-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  transition: all 0.3s;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.favorite-item:active {
  transform: scale(0.98);
}

.favorite-item.selected {
  background: #fff3cd;
  border: 2rpx solid #ffd700;
}

.favorite-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: #ffd700;
  border-radius: 20rpx 0 0 20rpx;
}

.selection-box {
  margin-right: 20rpx;
  margin-top: 8rpx;
}

.item-content {
  flex: 1;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.subject-tag {
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: white;
}

.subject-tag.subject-math {
  background: #ff6b6b;
}

.subject-tag.subject-chinese {
  background: #4ecdc4;
}

.subject-tag.subject-english {
  background: #45b7d1;
}

.subject-tag.subject-physics {
  background: #96ceb4;
}

.subject-tag.subject-chemistry {
  background: #ffeaa7;
  color: #333;
}

.type-tag,
.custom-tag {
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  font-size: 22rpx;
  color: #666;
}

.custom-tag {
  background: #e3f2fd;
  color: #1976d2;
}

.meta-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.question-content {
  margin-bottom: 16rpx;
}

.question-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}

.answer-preview {
  margin-bottom: 16rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #ffd700;
}

.answer-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.notes-content {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  margin-bottom: 16rpx;
  padding: 16rpx;
  background: #fff8e1;
  border-radius: 12rpx;
  border-left: 4rpx solid #ffc107;
}

.notes-text {
  font-size: 24rpx;
  color: #555;
  line-height: 1.4;
  flex: 1;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 22rpx;
  color: #999;
}

.quick-actions {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #ffd700;
}

.item-arrow {
  margin-left: 20rpx;
  margin-top: 8rpx;
  color: #ccc;
}

/* 加载状态 */
.load-more {
  text-align: center;
  padding: 40rpx;
}

.load-more-text {
  color: #999;
  font-size: 26rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.empty-tips {
  font-size: 24rpx;
  color: #bbb;
  line-height: 1.4;
}

/* 排序选项 */
.sort-options {
  padding: 20rpx 0;
}

.sort-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 30rpx 40rpx;
  font-size: 28rpx;
  color: #333;
  transition: background-color 0.3s;
}

.sort-item:active {
  background-color: #f5f5f5;
}

/* 分享选项 */
.share-options {
  padding: 20rpx 0;
}

.share-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 30rpx 40rpx;
  font-size: 28rpx;
  color: #333;
  transition: background-color 0.3s;
}

.share-item:active {
  background-color: #f5f5f5;
}
