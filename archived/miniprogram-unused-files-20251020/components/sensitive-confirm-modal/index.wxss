.sensitive-confirm-modal {
  background: #fff;
  border-radius: 16rpx;
  padding: 48rpx 32rpx 32rpx;
  max-width: 640rpx;
  margin: 0 auto;
}

.modal-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.modal-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  font-size: 48rpx;
  color: #fff;
}

.modal-icon.info {
  background-color: #576B95;
}

.modal-icon.warning {
  background-color: #FF9500;
}

.modal-icon.danger {
  background-color: #FA5151;
}

.modal-icon.success {
  background-color: #07C160;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  text-align: center;
}

.modal-content {
  margin-bottom: 48rpx;
}

.modal-message {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  text-align: center;
  display: block;
  margin-bottom: 32rpx;
}

.input-section {
  margin-top: 32rpx;
}

.input-label {
  font-size: 26rpx;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.password-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fafafa;
  box-sizing: border-box;
}

.password-input:focus {
  border-color: #576B95;
  background-color: #fff;
}

.reason-input {
  width: 100%;
  min-height: 120rpx;
  max-height: 240rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fafafa;
  box-sizing: border-box;
  resize: none;
}

.reason-input:focus {
  border-color: #576B95;
  background-color: #fff;
}

.input-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 8rpx;
}

.char-count {
  font-size: 24rpx;
  color: #999;
}

.input-error {
  font-size: 24rpx;
  color: #FA5151;
  margin-top: 8rpx;
  display: block;
}

.modal-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 16rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  position: relative;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-cancel:active {
  background-color: #e5e5e5;
}

.btn-confirm {
  color: #fff;
}

.btn-confirm.info {
  background-color: #576B95;
}

.btn-confirm.warning {
  background-color: #FF9500;
}

.btn-confirm.danger {
  background-color: #FA5151;
}

.btn-confirm.success {
  background-color: #07C160;
}

.btn-confirm:active:not([disabled]) {
  opacity: 0.8;
}

.btn-confirm[disabled] {
  background-color: #ccc !important;
  color: #999 !important;
}

