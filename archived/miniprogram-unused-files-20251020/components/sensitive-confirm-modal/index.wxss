@media (max-width: 400px) {
  .sensitive-confirm-modal {
    padding: 32rpx 24rpx 24rpx;
    margin: 0 24rpx;
  }
  
  .modal-actions {
    flex-direction: column;
  }
  
  .btn {
    margin-bottom: 16rpx;
  }
  
  .btn:last-child {
    margin-bottom: 0;
  }
