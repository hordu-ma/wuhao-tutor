/**
 * 学习卡片组件样式
 * 用于展示作业、课程、测试等学习相关内容
 */

.study-card {
  background-color: #ffffff;
  border-radius: var(--border-radius-md);
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--spacing-md);
  overflow: hidden;
  transition: var(--transition-base);
}

.study-card--clickable {
  cursor: pointer;
}

.study-card--clickable:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-2rpx);
}

.study-card--clickable:active {
  transform: translateY(0);
  box-shadow: var(--shadow-sm);
}

/* 卡片头部 */
.study-card__header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color-split);
}

.study-card__main {
  display: flex;
  align-items: flex-start;
  flex: 1;
  margin-right: var(--spacing-sm);
}

.study-card__icon-wrapper {
  margin-right: var(--spacing-sm);
  padding: var(--spacing-xs);
  border-radius: var(--border-radius-sm);
  background-color: var(--background-color-light);
}

.study-card__icon {
  color: var(--primary-color);
}

.study-card__content {
  flex: 1;
  min-width: 0; /* 防止flex item溢出 */
}

.study-card__title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-medium);
  color: var(--text-color);
  line-height: var(--line-height-base);
  margin-bottom: var(--spacing-xs);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.study-card__subtitle {
  font-size: var(--font-size-sm);
  color: var(--text-color-secondary);
  line-height: var(--line-height-base);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.study-card__actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.study-card__more {
  padding: var(--spacing-xs);
  border-radius: var(--border-radius-sm);
  background-color: var(--background-color-light);
  color: var(--text-color-tertiary);
  transition: var(--transition-base);
}

.study-card__more:hover {
  background-color: var(--background-color-dark);
  color: var(--text-color-secondary);
}

.study-card__more:active {
  transform: scale(0.95);
}

/* 卡片内容 */
.study-card__body {
  padding: var(--spacing-md);
  padding-top: var(--spacing-sm);
}

.study-card__subject {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.study-card__subject-icon {
  margin-right: var(--spacing-xs);
}

.study-card__subject-text {
  font-size: var(--font-size-sm);
  color: var(--text-color-secondary);
  font-weight: var(--font-weight-medium);
}

.study-card__difficulty {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.study-card__difficulty-label {
  font-size: var(--font-size-sm);
  color: var(--text-color-tertiary);
  margin-right: var(--spacing-xs);
}

.study-card__difficulty-value {
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
}

/* 进度条 */
.study-card__progress {
  margin-bottom: var(--spacing-sm);
}

.study-card__progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-xs);
}

.study-card__progress-label {
  font-size: var(--font-size-sm);
  color: var(--text-color-tertiary);
}

.study-card__progress-percent {
  font-size: var(--font-size-sm);
  color: var(--primary-color);
  font-weight: var(--font-weight-medium);
}

.study-card__progress-bar {
  height: 8rpx;
  background-color: var(--background-color-base);
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
}

.study-card__progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-color-light), var(--primary-color));
  border-radius: 4rpx;
  transition: width 0.3s ease;
  position: relative;
}

.study-card__progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: progress-shine 2s infinite;
}

@keyframes progress-shine {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

/* 截止时间 */
.study-card__deadline {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.study-card__deadline-icon {
  margin-right: var(--spacing-xs);
  color: var(--text-color-quaternary);
}

.study-card__deadline-text {
  font-size: var(--font-size-sm);
  color: var(--text-color-tertiary);
}

.study-card__deadline-text--overdue {
  color: var(--error-color);
  font-weight: var(--font-weight-medium);
}

/* 额外信息 */
.study-card__extra {
  margin-bottom: var(--spacing-sm);
}

.study-card__extra-text {
  font-size: var(--font-size-sm);
  color: var(--text-color-secondary);
  line-height: var(--line-height-base);
}

/* 卡片底部 */
.study-card__footer {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-sm) var(--spacing-md);
  background-color: var(--background-color-light);
  border-top: 1rpx solid var(--border-color-split);
  transition: var(--transition-base);
}

.study-card--clickable .study-card__footer:hover {
  background-color: var(--background-color-base);
}

.study-card__footer-text {
  font-size: var(--font-size-sm);
  color: var(--text-color-quaternary);
  margin-right: var(--spacing-xs);
}

.study-card__footer-arrow {
  color: var(--text-color-quaternary);
  transition: var(--transition-base);
}

.study-card--clickable:hover .study-card__footer-arrow {
  transform: translateX(4rpx);
  color: var(--primary-color);
}

/* 状态相关样式 */
.study-card--pending {
  border-left: 4rpx solid var(--warning-color);
}

.study-card--processing {
  border-left: 4rpx solid var(--primary-color);
}

.study-card--completed {
  border-left: 4rpx solid var(--success-color);
}

.study-card--overdue {
  border-left: 4rpx solid var(--error-color);
}

.study-card--completed .study-card__title {
  text-decoration: line-through;
  opacity: 0.7;
}

.study-card--overdue .study-card__header {
  background-color: var(--error-color-bg);
}

/* 响应式设计 */
@media (max-width: 375px) {
  .study-card__header {
    padding: var(--spacing-sm);
  }

  .study-card__body {
    padding: var(--spacing-sm);
  }

  .study-card__title {
    font-size: var(--font-size-md);
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .study-card {
    background-color: var(--background-color-light);
    border: 1rpx solid var(--border-color-base);
  }

  .study-card__icon-wrapper {
    background-color: var(--background-color-base);
  }

  .study-card__more {
    background-color: var(--background-color-base);
  }

  .study-card__footer {
    background-color: var(--background-color-base);
  }
}

/* 无障碍访问 */
.study-card:focus {
  outline: 2rpx solid var(--primary-color);
  outline-offset: 2rpx;
}

.study-card__more:focus {
  outline: 2rpx solid var(--primary-color);
  outline-offset: 2rpx;
}

/* 加载状态 */
.study-card--loading {
  opacity: 0.6;
  pointer-events: none;
}

.study-card--loading .study-card__title,
.study-card--loading .study-card__subtitle {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading-shimmer 1.5s infinite;
  color: transparent;
  border-radius: 4rpx;
}

@keyframes loading-shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* 打印样式 */
@media print {
  .study-card {
    box-shadow: none;
    border: 1rpx solid var(--border-color-base);
    break-inside: avoid;
  }

  .study-card__more {
    display: none;
  }

  .study-card__footer {
    display: none;
  }
}
