/* 学情诊断报告组件样式 */
.learning-diagnosis {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 报告头部 */
.diagnosis-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  color: white;
  margin-bottom: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  flex: 1;
}

.title-main {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.title-sub {
  font-size: 28rpx;
  opacity: 0.8;
  display: block;
}

.header-score {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-circle {
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 16rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.score-number {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1;
}

.score-unit {
  font-size: 24rpx;
  opacity: 0.9;
}

.score-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 诊断区块 */
.diagnosis-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.section-title .van-icon {
  margin-right: 16rpx;
  color: #667eea;
}

/* 学习风格分析 */
.learning-style {
  margin-top: 24rpx;
}

.style-item {
  margin-bottom: 32rpx;
}

.style-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.style-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #34495e;
}

.style-percentage {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
}

.style-description {
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-top: 24rpx;
  font-size: 26rpx;
  line-height: 1.6;
  color: #5a6c7d;
}

/* 知识点掌握情况 */
.knowledge-mastery {
  margin-top: 24rpx;
}

.mastery-item {
  margin-bottom: 40rpx;
}

.mastery-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.subject-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
}

.mastery-rate {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

.knowledge-points {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
}

.point-item {
  margin-bottom: 24rpx;
}

.point-item:last-child {
  margin-bottom: 0;
}

.point-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.point-name {
  font-size: 26rpx;
  color: #34495e;
}

/* 学习行为分析 */
.behavior-analysis {
  margin-top: 24rpx;
}

.behavior-metrics {
  margin-bottom: 32rpx;
}

.metric-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.metric-icon {
  width: 80rpx;
  height: 80rpx;
  background: #667eea;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 24rpx;
}

.metric-icon .van-icon {
  color: white;
  font-size: 32rpx;
}

.metric-content {
  flex: 1;
}

.metric-name {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.metric-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
  margin-right: 16rpx;
}

.metric-trend {
  font-size: 24rpx;
  font-weight: 500;
}

.metric-trend.up {
  color: #27ae60;
}

.metric-trend.down {
  color: #e74c3c;
}

.metric-trend.stable {
  color: #95a5a6;
}

.behavior-patterns {
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 12rpx;
}

.patterns-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #2c3e50;
  display: block;
  margin-bottom: 16rpx;
}

.pattern-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 改进建议 */
.improvement-suggestions {
  margin-top: 24rpx;
}

.suggestion-item {
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.suggestion-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.suggestion-header .van-icon {
  margin-right: 12rpx;
  color: #667eea;
}

.suggestion-category {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
}

.suggestion-content {
  margin-bottom: 16rpx;
}

.suggestion-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #5a6c7d;
  margin-bottom: 8rpx;
}

.suggestion-priority {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

/* 进步跟踪 */
.progress-tracking {
  margin-top: 24rpx;
}

.progress-summary {
  display: flex;
  justify-content: space-around;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.summary-item {
  text-align: center;
}

.summary-label {
  font-size: 24rpx;
  color: #7f8c8d;
  display: block;
  margin-bottom: 8rpx;
}

.summary-value {
  font-size: 36rpx;
  font-weight: 700;
}

.summary-value.positive {
  color: #27ae60;
}

.summary-value.negative {
  color: #e74c3c;
}

.progress-highlights,
.progress-goals {
  margin-bottom: 32rpx;
}

.highlights-title,
.goals-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  display: block;
  margin-bottom: 16rpx;
}

.highlight-item,
.goal-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #34495e;
  line-height: 1.5;
}

.highlight-item .van-icon {
  margin-right: 12rpx;
}

.goal-item .van-checkbox {
  margin-right: 12rpx;
}

/* 操作按钮 */
.diagnosis-actions {
  display: flex;
  justify-content: center;
  padding: 32rpx 0;
}

/* 页脚信息 */
.diagnosis-footer {
  text-align: center;
  padding: 32rpx 0;
  border-top: 2rpx solid #e9ecef;
  margin-top: 32rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #95a5a6;
  display: block;
  margin-bottom: 8rpx;
}

/* 加载和空状态 */
.van-loading {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #7f8c8d;
}

.van-empty {
  padding: 80rpx 0;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .diagnosis-header {
    flex-direction: column;
    text-align: center;
  }
  
  .header-title {
    margin-bottom: 24rpx;
  }
  
  .progress-summary {
    flex-direction: column;
    gap: 24rpx;
  }
  
  .diagnosis-actions {
    flex-direction: column;
    gap: 16rpx;
  }
}

/* 深色模式适配 */
.dark .learning-diagnosis {
  background-color: #1a1a1a;
}

.dark .diagnosis-section {
  background: #2d2d2d;
  border-color: #404040;
}

.dark .section-title {
  color: #e5e5e5;
}

.dark .metric-item,
.dark .style-description,
.dark .knowledge-points,
.dark .behavior-patterns,
.dark .progress-summary {
  background: #404040;
}

.dark .footer-text {
  color: #888;
}