<view class="api-status {{ customClass }}" style="min-height: {{ minHeight }}">
  
  <!-- 加载状态 -->
  <view wx:if="{{ status === 'loading' }}" class="status-loading">
    <van-loading type="spinner" size="48rpx" color="#1890ff">
      {{ loadingText }}
    </van-loading>
  </view>

  <!-- 错误状态 -->
  <view wx:elif="{{ status === 'error' }}" class="status-error">
    <van-empty 
      image="error" 
      description="{{ errorMessage }}"
    >
      <van-button 
        wx:if="{{ showRetry }}"
        round 
        type="primary" 
        size="small"
        bind:click="onRetry"
      >
        {{ retryText }}
      </van-button>
    </van-empty>
  </view>

  <!-- 空状态 -->
  <view wx:elif="{{ status === 'empty' }}" class="status-empty">
    <van-empty 
      image="{{ emptyImages[emptyImage] || emptyImage }}" 
      description="{{ emptyText }}"
    >
      <slot name="empty-action"></slot>
    </van-empty>
  </view>

  <!-- 成功状态 - 显示内容 -->
  <view wx:elif="{{ status === 'success' }}" class="status-success">
    <slot></slot>
  </view>

</view>