.error-boundary {
  width: 100%;
  height: 100%;
}

.error-boundary-content {
  width: 100%;
  height: 100%;
}

.error-inline {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx 24rpx;
  background-color: #fff2f0;
  border: 2rpx solid #ffccc7;
  border-radius: 8rpx;
  margin: 16rpx;
}

.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.error-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.error-message {
  font-size: 28rpx;
  color: #f5222d;
  margin-bottom: 8rpx;
  line-height: 1.5;
}

.error-details {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.error-actions {
  display: flex;
  gap: 16rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .error-inline {
    margin: 12rpx;
    padding: 24rpx 16rpx;
  }
  
  .error-icon {
    font-size: 40rpx;
  }
  
  .error-message {
    font-size: 26rpx;
  }
}