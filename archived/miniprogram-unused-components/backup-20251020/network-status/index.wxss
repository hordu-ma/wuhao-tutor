.network-status {
  z-index: 9999;
}

.fixed-top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.network-inline {
  padding: 8rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 4rpx;
}

.network-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.network-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.network-text {
  margin-right: 16rpx;
}

.network-status {
  font-size: 22rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.network-status.online {
  background-color: #f6ffed;
  color: #52c41a;
}

.network-status.offline {
  background-color: #fff2f0;
  color: #f5222d;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .network-info {
    font-size: 22rpx;
  }
  
  .network-icon {
    font-size: 24rpx;
  }
}