/* components/correction-result/index.wxss - 批改结果展示组件样式 */

.correction-result {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 概要模式 */
.summary-mode {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
}

.score-summary {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.score-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.grade-badge {
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.summary-description {
  font-size: 24rpx;
  color: #666;
}

/* 紧凑模式 */
.compact-mode {
  padding: 20rpx;
}

.compact-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.score-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.score-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.grade-tag {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.correct-rate {
  font-size: 26rpx;
  color: #666;
}

.compact-comment {
  padding: 12rpx;
  background-color: #fafafa;
  border-radius: 8rpx;
}

.comment-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 详细模式 */
.detailed-mode {
  padding: 32rpx;
}

/* 成绩头部 */
.score-header {
  margin-bottom: 32rpx;
}

.score-main {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 16rpx;
}

.score-circle {
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.score-progress {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.score-inner {
  width: 90rpx;
  height: 90rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.score-number {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.score-divider {
  font-size: 20rpx;
  color: #999;
}

.score-total {
  font-size: 20rpx;
  color: #999;
}

.score-info {
  flex: 1;
}

.grade-display {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.grade-level {
  font-size: 48rpx;
  font-weight: 600;
}

.grade-description {
  font-size: 28rpx;
  color: #666;
}

.score-percentage {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.correction-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.correction-time,
.teacher-name {
  font-size: 24rpx;
  color: #999;
}

/* 统计信息 */
.statistics-section {
  display: flex;
  justify-content: space-around;
  padding: 24rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.stat-item.correct .stat-value {
  color: #52c41a;
}

.stat-item.incorrect .stat-value {
  color: #f5222d;
}

.stat-item.rate .stat-value {
  color: #1890ff;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 评语区块 */
.comment-section {
  margin-bottom: 32rpx;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.comment-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.comment-content {
  padding: 20rpx 0;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 题目区块 */
.questions-section {
  margin-bottom: 32rpx;
}

.questions-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.questions-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.toggle-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  cursor: pointer;
}

.toggle-text {
  font-size: 26rpx;
  color: #666;
}

.questions-list {
  padding: 20rpx 0;
}

.question-item {
  padding: 20rpx;
  margin-bottom: 16rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.question-item:hover {
  background-color: #f0f0f0;
}

.question-item:last-child {
  margin-bottom: 0;
}

.question-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.question-number {
  width: 48rpx;
  height: 48rpx;
  background-color: #e6f7ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.number-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #1890ff;
}

.question-result {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-left: 16rpx;
}

.result-text {
  font-size: 26rpx;
  font-weight: 500;
}

.result-text.correct {
  color: #52c41a;
}

.result-text.incorrect {
  color: #f5222d;
}

.question-score {
  font-size: 24rpx;
  color: #666;
}

.score-text {
  font-weight: 500;
}

.question-comment {
  margin-bottom: 12rpx;
  padding: 12rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.question-comment-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

.question-analysis {
  padding: 12rpx;
  background-color: #e6f7ff;
  border-radius: 8rpx;
}

.analysis-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #1890ff;
  margin-right: 8rpx;
}

.analysis-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 16rpx;
  justify-content: center;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

/* 响应式调整 */
@media (max-width: 600rpx) {
  .score-main {
    flex-direction: column;
    gap: 20rpx;
    text-align: center;
  }

  .statistics-section {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }

  .action-section {
    flex-direction: column;
  }
}
