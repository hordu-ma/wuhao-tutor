<!--简化的测试页面-->
<view class="test-container" style="padding: 20px;">
  <view style="margin-bottom: 20px; background: #f0f0f0; padding: 15px; border-radius: 8px;">
    <text style="font-size: 16px; font-weight: bold;">调试信息</text>
    <view style="margin-top: 10px;">
      <text style="display: block;">Loading: {{loading ? '是' : '否'}}</text>
      <text style="display: block;">IsLoggedIn: {{isLoggedIn ? '是' : '否'}}</text>
      <text style="display: block;">HasUserInfo: {{hasUserInfo ? '是' : '否'}}</text>
      <text style="display: block;">Role: {{role || '无'}}</text>
    </view>
  </view>

  <view style="margin-bottom: 20px;">
    <text style="font-size: 18px; font-weight: bold;">五好伴学</text>
    <text style="display: block; color: #666; margin-top: 5px;">
      {{userInfo ? userInfo.nickName : '未登录'}}
    </text>
  </view>

  <view style="display: flex; flex-direction: column; gap: 10px;">
    <button type="primary" bindtap="handleTestLogin">测试登录</button>
    <button type="default" bindtap="handleTestRefresh">刷新数据</button>
    <button bindtap="handleGoToHomework">进入作业页</button>
  </view>

  <view wx:if="{{error}}" style="margin-top: 20px; padding: 10px; background: #ffebee; color: #c62828; border-radius: 4px;">
    <text>错误: {{error}}</text>
  </view>
</view>
